<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 <record id="view_create_global_delivery_form" model="ir.ui.view">
        <field name="name">create.global.delivery.form</field>
        <field name="model">create.global.delivery</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="note"/>
                    <field name="picking_ids"/>
                </group>
                <footer>
                    <button name="action_create_global_delivery" 
                            string="Créer" type="object" 
                            class="btn-primary"/>
                    <button special="cancel" string="Annuler"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action du wizard -->
    <record id="action_create_global_delivery" model="ir.actions.act_window">
        <field name="name">Créer BL Global</field>
        <field name="res_model">create.global.delivery</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">list</field>
    </record>
    
</odoo>