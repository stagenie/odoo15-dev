<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajout du champ OPP Number dans la vue formulaire des devis/commandes -->
    <record id="view_order_form_opp_number" model="ir.ui.view">
        <field name="name">sale.order.form.opp.number</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="opp_number" placeholder="OPP Number"/>
            </field>
        </field>
    </record>

    <!-- Ajout du champ OPP Number dans la vue liste des devis/commandes -->
    <record id="view_order_tree_opp_number" model="ir.ui.view">
        <field name="name">sale.order.tree.opp.number</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="opp_number" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_order_tree_opp_number_2" model="ir.ui.view">
        <field name="name">sale.order.tree.opp.number.2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="opp_number" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Ajout dans la recherche -->
    <record id="view_order_search_opp_number" model="ir.ui.view">
        <field name="name">sale.order.search.opp.number</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="opp_number"/>
            </field>
        </field>
    </record>
</odoo>
