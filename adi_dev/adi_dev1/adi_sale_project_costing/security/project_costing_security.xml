<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ====== CATEGORIE ====== -->
        <record id="module_category_project_costing" model="ir.module.category">
            <field name="name">Costing Projet</field>
            <field name="description">Calcul de costing pour devis projets</field>
            <field name="sequence">60</field>
        </record>

        <!-- ====== GROUPE UTILISATEUR ====== -->
        <record id="group_project_costing_user" model="res.groups">
            <field name="name">Utilisateur Costing</field>
            <field name="category_id" ref="module_category_project_costing"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Peut créer et modifier ses propres calculs de costing</field>
        </record>

        <!-- ====== GROUPE MANAGER ====== -->
        <record id="group_project_costing_manager" model="res.groups">
            <field name="name">Responsable Costing</field>
            <field name="category_id" ref="module_category_project_costing"/>
            <field name="implied_ids" eval="[(4, ref('group_project_costing_user'))]"/>
            <field name="comment">Accès complet aux calculs de costing</field>
        </record>

    </data>

    <data noupdate="1">

        <!-- ====== REGLES D'ACCES ====== -->

        <!-- Règle : Utilisateurs voient les costing de leurs propres devis -->
        <record id="project_costing_line_rule_user" model="ir.rule">
            <field name="name">Costing : propres devis</field>
            <field name="model_id" ref="model_project_costing_line"/>
            <field name="domain_force">[('order_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_project_costing_user'))]"/>
        </record>

        <!-- Règle : Managers voient tout -->
        <record id="project_costing_line_rule_manager" model="ir.rule">
            <field name="name">Costing : accès total managers</field>
            <field name="model_id" ref="model_project_costing_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_project_costing_manager'))]"/>
        </record>

    </data>
</odoo>
