<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- AB FACTURE - Héritage de ADI Facture       -->
    <!-- - Sans Date échéance                       -->
    <!-- - Sans Origine                             -->
    <!-- - Remise avec 2 décimales                  -->
    <!-- - Mode de règlement en bas                 -->
    <!-- ========================================== -->

    <!-- Héritage du template ADI Facture -->
    <template id="ab_report_invoice_document_inherit"
              inherit_id="l10n_dz_droit_timbre.adi_report_invoice_document">

        <!-- Supprimer la date d'échéance -->
        <xpath expr="//div[@name='due_date']" position="replace"/>

        <!-- Supprimer la source/origine -->
        <xpath expr="//div[@name='origin']" position="replace"/>

        <!-- Remplacer l'affichage de la remise pour avoir 2 décimales -->
        <xpath expr="//td[contains(@t-if,'display_discount')]//span[@t-field='line.discount']" position="replace">
            <span t-if="line.discount > 0" t-esc="'%.2f' % line.discount"/>
        </xpath>

        <!-- Ajouter les détails des paiements avant le montant en lettres (optionnel) -->
        <xpath expr="//div[@name='montant_en_lettre_timbre']" position="before">
            <div class="row mt-3 mb-3" t-if="o.show_payment_details and o.payment_ids">
                <div class="col-12">
                    <strong>Détails des paiements:</strong>
                    <table class="table table-sm table-bordered mt-2">
                        <thead>
                            <tr style="background-color: #f5f5f5;">
                                <th>Date</th>
                                <th>Journal</th>
                                <th>Mode de paiement</th>
                                <th>Référence</th>
                                <th class="text-end">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.payment_ids" t-as="payment">
                                <tr>
                                    <td><span t-field="payment.date"/></td>
                                    <td><span t-field="payment.journal_id.name"/></td>
                                    <td>
                                        <t t-if="payment.journal_id.type == 'cash'">
                                            Espèces
                                        </t>
                                        <t t-elif="payment.journal_id.type == 'bank'">
                                            <t t-if="payment.mode_payment == 'check'">Chèque</t>
                                            <t t-elif="payment.mode_payment == 'bank_transfer'">Virement</t>
                                            <t t-elif="payment.mode_payment == 'bank_deposit'">Versement</t>
                                            <t t-else="">-</t>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    <td>
                                        <t t-if="payment.mode_payment == 'check' and payment.check_number">
                                            N° <span t-field="payment.check_number"/>
                                        </t>
                                        <t t-elif="payment.mode_payment == 'bank_transfer' and payment.transfer_number">
                                            N° <span t-field="payment.transfer_number"/>
                                        </t>
                                        <t t-elif="payment.mode_payment == 'bank_deposit' and payment.deposit_number">
                                            N° <span t-field="payment.deposit_number"/>
                                        </t>
                                        <t t-elif="payment.ref">
                                            <span t-field="payment.ref"/>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="payment.amount" t-options="{'widget': 'monetary', 'display_currency': payment.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Mode de règlement prévu si pas encore de paiements (optionnel) -->
            <div class="row mt-3 mb-3" t-if="o.show_payment_details and not o.payment_ids and o.payment_state != 'paid'">
                <div class="col-6">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Mode de règlement prévu:</strong></td>
                            <td class="text-end">
                                <t t-if="o.payment_mode_id">
                                    <span t-field="o.payment_mode_id.name"/>
                                </t>
                                <t t-else="">
                                    <span>À définir</span>
                                </t>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>
    </template>

    <!-- Créer un nouveau rapport qui utilise ce template hérité -->
    <record id="action_report_ab_invoice" model="ir.actions.report">
        <field name="name">AB Facture</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_dz_droit_timbre.adi_report_invoice</field>
        <field name="report_file">l10n_dz_droit_timbre.adi_report_invoice</field>
        <field name="print_report_name">'Facture - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
