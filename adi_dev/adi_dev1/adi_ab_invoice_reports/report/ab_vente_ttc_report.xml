<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- VENTE TTC - Nouveau rapport                -->
    <!-- - Sans titre "Bon de livraison"            -->
    <!-- - Sans Date échéance et Origine            -->
    <!-- - Total TTC dans les lignes                -->
    <!-- - Sans colonne TVA                         -->
    <!-- - Net à payer seulement en bas             -->
    <!-- - Préserve le timbre si espèce             -->
    <!-- ========================================== -->

    <template id="ab_vente_ttc_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
            <t t-set="address">
                <div style="line-height: 1.5; font-size:14px;">
                    <div>
                        <strong><span t-field="o.partner_id.name"/></strong>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="o.partner_id.street"/>
                    </div>
                </div>
                <div style="line-height: 1.5; padding-top:15px; font-size:12px;">
                    <div>
                        <span t-if="o.partner_id.rc"><strong>N° RC :</strong> <span t-field="o.partner_id.rc"/></span>
                        <span t-if="o.partner_id.ai"><strong>  AI :</strong> <span t-field="o.partner_id.ai"/></span>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="o.partner_id.nis"><strong>NIS :</strong> <span t-field="o.partner_id.nis"/></span>
                        <span t-if="o.partner_id.nif"><strong>  NIF :</strong> <span t-field="o.partner_id.nif"/></span>
                    </div>
                </div>
            </t>

            <div class="page">
                <!-- Titre: Uniquement la séquence -->
                <h2>
                    <span t-if="o.name != '/'" t-field="o.name"/>
                </h2>

                <!-- Informations en haut SANS échéance ni origine -->
                <div id="informations" class="row mt-4 mb-4">
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                        <t t-if="o.move_type == 'out_invoice'"><strong>Date:</strong></t>
                        <t t-elif="o.move_type == 'out_refund'"><strong>Date d'Avoir:</strong></t>
                        <t t-elif="o.move_type == 'out_receipt'"><strong>Date Réception:</strong></t>
                        <t t-else=""><strong>Date:</strong></t>
                        <p class="m-0" t-field="o.invoice_date"/>
                    </div>
                    <!-- PAS DE DATE ÉCHÉANCE -->
                    <!-- PAS D'ORIGINE -->
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                        <strong>Code Client:</strong>
                        <p class="m-0" t-field="o.partner_id.ref"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                        <strong>Réference:</strong>
                        <p class="m-0" t-field="o.ref"/>
                    </div>
                </div>

                <!-- Table des lignes: N°, Description, Qté, Prix TTC, Total TTC -->
                <!-- SANS colonne TVA -->
                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>

                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_NUMBER" class="text-left"><span>N°</span></th>
                            <th name="th_description" class="text-left"><span>Description</span></th>
                            <th name="th_quantity" class="text-right"><span>Quantité</span></th>
                            <th name="th_priceunit" class="text-right"><span>Prix TTC</span></th>
                            <th name="th_discount" t-if="display_discount" class="text-right"><span>Rem.%</span></th>
                            <!-- PAS DE COLONNE TVA -->
                            <th name="th_subtotal" class="text-right"><span>Montant TTC</span></th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-set="line_num" t-value="0"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"/>
                            <t t-if="not line.display_type">
                                <t t-set="line_num" t-value="line_num + 1"/>
                            </t>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td class="text-left">
                                        <span t-esc="line_num"/>
                                    </td>
                                    <td name="account_invoice_line_name">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <!-- Prix unitaire TTC = prix_unit * (1 + taux_tva) -->
                                        <t t-set="price_unit_ttc" t-value="line.price_unit * (1 + sum(line.tax_ids.mapped('amount')) / 100) if line.tax_ids else line.price_unit"/>
                                        <span t-esc="price_unit_ttc"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td t-if="display_discount" class="text-right">
                                        <!-- Remise avec 2 décimales -->
                                        <span t-if="line.discount > 0" t-esc="'%.2f' % line.discount"/>
                                    </td>
                                    <!-- PAS DE COLONNE TVA -->
                                    <td class="text-right o_price_total">
                                        <!-- Total TTC de la ligne -->
                                        <span t-field="line.price_total"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Sous Total</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- Totaux en bas: Net à payer seulement (pas de HT ni TVA) -->
                <div class="clearfix">
                    <div id="total" class="row">
                        <!-- Colonne gauche: Mode de règlement -->
                        <div class="col-6">
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Mode de règlement:</strong></td>
                                    <td class="text-end">
                                        <t t-if="o.payment_mode_id">
                                            <span t-field="o.payment_mode_id.name"/>
                                            <!-- Afficher N° pour Chèque ou Virement -->
                                            <t t-if="'Chèque' in (o.payment_mode_id.name or '')">
                                                <br/><span>N° Chèque: _______________</span>
                                            </t>
                                            <t t-elif="'Virement' in (o.payment_mode_id.name or '') or 'virement' in (o.payment_mode_id.name or '')">
                                                <br/><span>N° Virement: _______________</span>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span>Date à terme</span>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <!-- Colonne droite: Totaux -->
                        <div class="col-6">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <!-- Net à payer (Total TTC) -->
                                <tr class="border-black o_total">
                                    <td><strong>Net à payer</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>

                                <!-- Ligne pour le champ 'Timbre' si paiement en espèce -->
                                <t t-if="o.payment_mode_type == 'espece'">
                                    <tr class="border-black o_timbre">
                                        <td><strong>Timbre</strong>
                                            <span t-if="o.amount_total > 0">
                                                (<t t-esc="round((o.amount_timbre / o.amount_total) * 100, 2)"/> %)
                                            </span>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_timbre"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <!-- Ligne pour le total avec timbre -->
                                    <tr class="border-black o_total">
                                        <td><strong>Total TTC avec Timbre</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total_with_timbre"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Montant en lettres -->
                <div style="text-align: left; font-weight: bold; page-break-inside: always;" name="montant_en_lettre_timbre">
                    <strong>Arrêtée la présente
                        <t t-if="o.state != 'draft'">Vente</t>
                        <t t-if="o.state == 'draft'">Devis</t>
                            à la somme de :</strong>
                    <div t-esc="o.get_amount_to_text_dz()"/>
                </div>

                <div t-if="not is_html_empty(o.narration)" name="comment">
                    <span t-field="o.narration"/>
                </div>
            </div>
        </t>
    </template>

    <template id="ab_vente_ttc_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="adi_ab_invoice_reports.ab_vente_ttc_document" t-lang="lang"/>
            </t>
        </t>
    </template>

    <!-- Définir le rapport Vente TTC -->
    <record id="action_report_ab_vente_ttc" model="ir.actions.report">
        <field name="name">Vente TTC AB</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_ab_invoice_reports.ab_vente_ttc_report</field>
        <field name="report_file">adi_ab_invoice_reports.ab_vente_ttc_report</field>
        <field name="print_report_name">'Vente TTC - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
