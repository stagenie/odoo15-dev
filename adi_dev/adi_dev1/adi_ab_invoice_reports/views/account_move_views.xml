<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajouter le champ show_payment_details dans la vue facture -->
    <record id="view_move_form_inherit_show_payment" model="ir.ui.view">
        <field name="name">account.move.form.inherit.show.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='other_tab']//group[@id='other_tab_group']" position="inside">
                <group string="Options d'impression paiement">
                    <field name="show_payment_details"/>
                    <field name="show_payment_journal" attrs="{'invisible': [('show_payment_details', '=', False)]}"/>
                    <field name="show_payment_amount" attrs="{'invisible': [('show_payment_details', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Ajouter un bouton d'impression sans paiement dans le header -->
    <record id="view_move_form_inherit_print_no_payment" model="ir.ui.view">
        <field name="name">account.move.form.inherit.print.no.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Ajouter le champ invoice_report_type si pas déjà présent -->
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="invoice_report_type" invisible="1"/>
            </xpath>

            <!-- Ajouter le bouton "Imprimer Sans Paiement" visible seulement pour les factures de type 'invoice' -->
            <xpath expr="//header/field[@name='state']" position="before">
                <button name="%(action_report_ab_invoice_no_payment)d"
                        string="Imprimer Sans Paiement"
                        type="action"
                        class="btn-success"
                        attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('invoice_report_type', '!=', 'invoice')]}"
                        groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>
