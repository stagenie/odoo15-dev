<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- RAPPORT DEVIS PERSONNALISÉ AB ENERGIE     -->
    <!-- ========================================== -->

    <template id="report_ab_quotation_document">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <t t-set="doc" t-value="o"/>
                <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>
                <t t-set="address">
                    <div t-field="doc.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    <p t-if="doc.partner_id.vat">
                        <t t-if="doc.company_id.account_fiscal_country_id.vat_label" t-out="doc.company_id.account_fiscal_country_id.vat_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="doc.partner_id.vat"/>
                    </p>
                </t>

                <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span t-if="doc.state == 'draft'">Devis # </span>
                    <span t-if="doc.state == 'sent'">Proforma # </span>
                    <span t-field="doc.name"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Votre référence:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2">
                        <strong>Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Vendeur:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                    <!-- NE PAS AFFICHER L'ÉCHÉANCE POUR LE DEVIS -->
                </div>

                <!-- Table des lignes de commande -->
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th name="th_description" class="text-start">Description</th>
                            <th name="th_quantity" class="text-end">Quantité</th>
                            <th name="th_priceunit" class="text-end">Prix TTC</th>
                            <!-- PAS DE COLONNE REMISE -->
                            <!-- PAS DE COLONNE TVA -->
                            <th name="th_subtotal" class="text-end">Total TTC</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"/>
                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_quantity" class="text-end">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-end">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <span t-field="line.price_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div class="col-6">
                            <!-- Offre valable jusqu'au -->
                            <table class="table table-sm" t-if="doc.quotation_validity_date">
                                <tr>
                                    <td><strong>Offre valable jusqu'au:</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.quotation_validity_date"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm">
                                <!-- DEVIS: Afficher seulement Net à payer (TTC) -->
                                <tr class="border-black o_total">
                                    <td><strong>Net à payer</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div t-if="doc.note" class="mt32">
                    <p><strong>Conditions générales:</strong></p>
                    <p t-field="doc.note"/>
                </div>
                <div t-if="doc.payment_term_id" class="mt32">
                    <p><strong>Conditions de paiement:</strong></p>
                    <p t-field="doc.payment_term_id.note"/>
                </div>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <!-- Définir le rapport Devis -->
    <record id="action_report_ab_quotation" model="ir.actions.report">
        <field name="name">Devis AB Energie</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_ab_reports.report_ab_quotation_document</field>
        <field name="report_file">adi_ab_reports.report_ab_quotation_document</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="adi_ab_reports.paperformat_ab_reports"/>
    </record>

    <!-- ========================================== -->
    <!-- RAPPORT PROFORMA PERSONNALISÉ AB ENERGIE  -->
    <!-- ========================================== -->

    <template id="report_ab_proforma_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="address">
                <div t-field="doc.partner_id"
                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                <p t-if="doc.partner_id.vat">
                    <t t-if="doc.company_id.account_fiscal_country_id.vat_label" t-out="doc.company_id.account_fiscal_country_id.vat_label"/>
                    <t t-else="">Tax ID</t>: <span t-field="doc.partner_id.vat"/>
                </p>
            </t>

            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span>Proforma # </span>
                    <span t-field="doc.name"/>
                </h2>

                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Votre référence:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2">
                        <strong>Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Vendeur:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                    <!-- NE PAS AFFICHER L'ÉCHÉANCE POUR LE PROFORMA -->
                </div>

                <!-- Table standard avec toutes les colonnes -->
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th name="th_description" class="text-start">Description</th>
                            <th name="th_quantity" class="text-end">Quantité</th>
                            <th name="th_priceunit" class="text-end">Prix unitaire</th>
                            <th name="th_discount" class="text-end" groups="product.group_discount_per_so_line">Remise %</th>
                            <th name="th_taxes" class="text-end">TVA</th>
                            <th name="th_subtotal" class="text-end">Total HT</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.order_line" t-as="line">
                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_quantity" class="text-end">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-end">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td name="td_discount" class="text-end" groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-end">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <span t-field="line.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div class="col-6">
                            <!-- Offre valable jusqu'au -->
                            <table class="table table-sm" t-if="doc.quotation_validity_date">
                                <tr>
                                    <td><strong>Offre valable jusqu'au:</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.quotation_validity_date"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm">
                                <!-- PROFORMA: Total HT, TVA, Net à payer -->
                                <tr class="border-black">
                                    <td><strong>Total HT</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_untaxed"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>TVA</td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_tax"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Net à payer</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div t-if="doc.note" class="mt32">
                    <p><strong>Conditions générales:</strong></p>
                    <p t-field="doc.note"/>
                </div>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <!-- Définir le rapport Proforma -->
    <record id="action_report_ab_proforma" model="ir.actions.report">
        <field name="name">Proforma AB Energie</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_ab_reports.report_ab_proforma_document</field>
        <field name="report_file">adi_ab_reports.report_ab_proforma_document</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="adi_ab_reports.paperformat_ab_reports"/>
    </record>

</odoo>
