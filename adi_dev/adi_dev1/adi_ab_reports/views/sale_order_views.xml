<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajout des champs personnalisés dans le formulaire de bon de commande -->
    <record id="view_order_form_ab_reports" model="ir.ui.view">
        <field name="name">sale.order.form.ab.reports</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter les champs après les informations de paiement -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="delivery_deadline"/>
                <field name="payment_terms_custom"/>
                <field name="quotation_validity_date"/>
            </xpath>
        </field>
    </record>
</odoo>
