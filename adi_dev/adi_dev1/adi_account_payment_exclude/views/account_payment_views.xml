<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Payment Form View -->
    <record id="view_account_payment_form_inherit_exclude" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.exclude</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="exclude_from_invoice_tab" widget="boolean_toggle"/>
            </field>
        </field>
    </record>

    <!-- Inherit Payment Tree View -->
    <record id="view_account_payment_tree_inherit_exclude" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit.exclude</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="exclude_from_invoice_tab" optional="show" string="Exclu rappro."/>
            </field>
        </field>
    </record>

    <!-- Inherit Payment Search View -->
    <record id="view_account_payment_search_inherit_exclude" model="ir.ui.view">
        <field name="name">account.payment.search.inherit.exclude</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <filter name="reconciled" position="after">
                <separator/>
                <filter string="Exclus du rapprochement" name="excluded_from_reconcile"
                        domain="[('exclude_from_invoice_tab', '=', True)]"/>
                <filter string="ProposÃ©s au rapprochement" name="included_in_reconcile"
                        domain="[('exclude_from_invoice_tab', '=', False)]"/>
            </filter>
        </field>
    </record>

</odoo>
