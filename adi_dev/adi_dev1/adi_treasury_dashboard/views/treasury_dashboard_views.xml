<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue Kanban du Dashboard avec groupement par type -->
    <record id="treasury_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">treasury.dashboard.kanban</field>
        <field name="model">treasury.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_treasury_dashboard" create="false" edit="false"
                    group_create="false" group_delete="false" group_edit="false" default_order="sequence,type">
                <field name="name"/>
                <field name="code"/>
                <field name="balance"/>
                <field name="currency_id"/>
                <field name="type"/>
                <field name="color"/>
                <field name="state"/>
                <field name="icon"/>
                <field name="res_id"/>
                <field name="res_model"/>
                <field name="sequence"/>
                <field name="has_pending_closing"/>
                <field name="is_balance_final"/>
                <progressbar field="state" colors='{"open": "success", "active": "success", "closed": "danger", "suspended": "warning", "locked": "muted"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_card_content p-0">
                                <!-- Carte pour les totaux -->
                                <t t-if="record.type.raw_value == 'total_cash' or record.type.raw_value == 'total_bank' or record.type.raw_value == 'total_safe' or record.type.raw_value == 'grand_total'">
                                    <div t-attf-class="card mb-0 shadow #{record.type.raw_value == 'grand_total' ? 'border-warning border-3' : (record.type.raw_value == 'total_cash' ? 'border-success border-3' : (record.type.raw_value == 'total_safe' ? 'border-secondary border-3' : 'border-primary border-3'))}">
                                        <div t-attf-class="card-header py-2 #{record.type.raw_value == 'grand_total' ? 'bg-warning text-dark' : (record.type.raw_value == 'total_cash' ? 'bg-success text-white' : (record.type.raw_value == 'total_safe' ? 'bg-secondary text-white' : 'bg-primary text-white'))}">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">
                                                    <i t-attf-class="fa #{record.type.raw_value == 'grand_total' ? 'fa-balance-scale' : (record.type.raw_value == 'total_safe' ? 'fa-lock' : 'fa-calculator')} me-1"/>
                                                    <field name="name"/>
                                                </span>
                                            </div>
                                        </div>
                                        <div t-attf-class="card-body text-center py-4 #{record.type.raw_value == 'grand_total' ? 'bg-warning bg-opacity-10' : ''}">
                                            <h2 t-attf-class="mb-0 fw-bold #{record.balance.raw_value &lt; 0 ? 'text-danger' : (record.type.raw_value == 'grand_total' ? 'text-warning' : (record.type.raw_value == 'total_cash' ? 'text-success' : (record.type.raw_value == 'total_safe' ? 'text-secondary' : 'text-primary')))}">
                                                <field name="balance" widget="monetary"/>
                                            </h2>
                                        </div>
                                    </div>
                                </t>
                                <!-- Carte pour caisses, banques et coffres individuels -->
                                <t t-else="">
                                    <div t-attf-class="card mb-0 shadow-sm #{record.balance.raw_value &lt; 0 ? 'border-danger border-2' : (record.balance.raw_value &gt; 0 ? (record.type.raw_value == 'cash' ? 'border-success border-2' : (record.type.raw_value == 'safe' ? 'border-secondary border-2' : 'border-primary border-2')) : 'border-secondary')}">
                                        <div t-attf-class="card-header py-2 #{record.balance.raw_value &lt; 0 ? 'bg-danger text-white' : (record.balance.raw_value &gt; 0 ? (record.type.raw_value == 'cash' ? 'bg-success text-white' : (record.type.raw_value == 'safe' ? 'bg-secondary text-white' : 'bg-primary text-white')) : 'bg-secondary text-white')}">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">
                                                    <i t-attf-class="fa #{record.type.raw_value == 'cash' ? 'fa-money' : (record.type.raw_value == 'safe' ? 'fa-lock' : 'fa-university')} me-1"/>
                                                    <field name="name"/>
                                                </span>
                                                <span class="badge bg-light text-dark">
                                                    <field name="code"/>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-body text-center py-3">
                                            <h3 t-attf-class="mb-0 fw-bold #{record.balance.raw_value &lt; 0 ? 'text-danger' : (record.balance.raw_value &gt; 0 ? (record.type.raw_value == 'cash' ? 'text-success' : (record.type.raw_value == 'safe' ? 'text-secondary' : 'text-primary')) : 'text-muted')}">
                                                <field name="balance" widget="monetary"/>
                                            </h3>
                                        </div>
                                        <div class="card-footer bg-light py-1 text-center">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <!-- État -->
                                                <span t-attf-class="badge #{record.state.raw_value == 'open' or record.state.raw_value == 'active' ? 'bg-success' : (record.state.raw_value == 'closed' ? 'bg-danger' : 'bg-warning')}">
                                                    <t t-if="record.state.raw_value == 'open'">Ouverte</t>
                                                    <t t-if="record.state.raw_value == 'active'">Actif</t>
                                                    <t t-if="record.state.raw_value == 'closed'">Fermé</t>
                                                    <t t-if="record.state.raw_value == 'suspended'">Suspendu</t>
                                                    <t t-if="record.state.raw_value == 'locked'">Verrouillé</t>
                                                </span>
                                                <!-- Indicateur de solde finalisé (Caisses et Banques seulement) -->
                                                <t t-if="record.type.raw_value == 'cash' or record.type.raw_value == 'bank'">
                                                    <t t-if="record.is_balance_final.raw_value">
                                                        <span class="badge bg-info" title="Solde finalisé - Pas de clôture en cours">
                                                            <i class="fa fa-check-circle me-1"/>Finalisé
                                                        </span>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="badge bg-warning text-dark" t-att-title="record.type.raw_value == 'cash' ? 'Clôture en cours' : 'Rapprochement en cours'">
                                                            <i class="fa fa-clock-o me-1"/>En cours
                                                        </span>
                                                    </t>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Tree simple pour liste -->
    <record id="treasury_dashboard_view_tree" model="ir.ui.view">
        <field name="name">treasury.dashboard.tree</field>
        <field name="model">treasury.dashboard</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" default_order="sequence,type"
                  decoration-danger="balance &lt; 0"
                  decoration-success="balance &gt; 0 and type in ('cash', 'total_cash')"
                  decoration-info="balance &gt; 0 and type in ('bank', 'total_bank')"
                  decoration-muted="balance &gt; 0 and type in ('safe', 'total_safe')"
                  decoration-warning="type == 'grand_total'"
                  decoration-bf="type in ('total_cash', 'total_bank', 'total_safe', 'grand_total')">
                <field name="sequence" invisible="1"/>
                <field name="type" string="Type"/>
                <field name="code"/>
                <field name="name"/>
                <field name="balance"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="is_balance_final" string="Finalisé" widget="boolean"/>
            </tree>
        </field>
    </record>

    <!-- Vue Pivot pour analyse -->
    <record id="treasury_dashboard_view_pivot" model="ir.ui.view">
        <field name="name">treasury.dashboard.pivot</field>
        <field name="model">treasury.dashboard</field>
        <field name="arch" type="xml">
            <pivot string="Synthèse Trésorerie">
                <field name="type" type="row"/>
                <field name="balance" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Graph -->
    <record id="treasury_dashboard_view_graph" model="ir.ui.view">
        <field name="name">treasury.dashboard.graph</field>
        <field name="model">treasury.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Soldes par Type" type="bar">
                <field name="name"/>
                <field name="balance" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action principale du Dashboard -->
    <record id="action_treasury_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de Bord Trésorerie</field>
        <field name="res_model">treasury.dashboard</field>
        <field name="view_mode">kanban,tree,pivot,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune donnée de trésorerie
            </p>
            <p>
                Créez des caisses, des comptes bancaires ou des coffres pour voir le tableau de bord.
            </p>
            <div class="alert alert-info mt-3">
                <h5><i class="fa fa-info-circle"/> Informations sur les soldes</h5>
                <ul class="mb-0">
                    <li><strong>Caisses</strong> : Liquidités disponibles dans les caisses physiques</li>
                    <li><strong>Banques</strong> : Soldes des comptes bancaires</li>
                    <li><strong>Coffres</strong> : Fonds sécurisés dans les coffres-forts</li>
                    <li><strong>Total Général</strong> : Caisses + Banques + Coffres = Trésorerie totale disponible</li>
                </ul>
                <hr class="my-2"/>
                <h6><i class="fa fa-check-circle"/> Indicateurs de statut</h6>
                <ul class="mb-0">
                    <li><span class="badge bg-info">Finalisé</span> : Pas de clôture/rapprochement en cours - Solde confirmé</li>
                    <li><span class="badge bg-warning text-dark">En cours</span> : Clôture ou rapprochement en cours - Solde provisoire</li>
                </ul>
            </div>
        </field>
    </record>

    <!-- Vue QWeb pour le Dashboard amélioré -->
    <record id="treasury_dashboard_main_view" model="ir.ui.view">
        <field name="name">treasury.dashboard.main</field>
        <field name="model">treasury.dashboard</field>
        <field name="arch" type="xml">
            <form string="Tableau de Bord Trésorerie" create="false" edit="false" delete="false">
                <sheet>
                    <div class="container-fluid">
                        <!-- En-tête -->
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h1 class="display-6">
                                    <i class="fa fa-dashboard me-2"/>
                                    Tableau de Bord Trésorerie
                                </h1>
                                <p class="text-muted">Vue d'ensemble des soldes (Caisses + Banques + Coffres)</p>
                            </div>
                        </div>
                        <!-- Indication informative -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-light border">
                                    <i class="fa fa-info-circle text-info me-2"/>
                                    <strong>Note :</strong> Le Total Général représente la somme de toutes les liquidités disponibles
                                    (caisses physiques + comptes bancaires + coffres-forts). Les montants en rouge indiquent un solde négatif.
                                    <hr class="my-2"/>
                                    <strong>Indicateurs de solde :</strong>
                                    <ul class="mb-0 mt-1">
                                        <li><span class="badge bg-info">Finalisé</span> : Caisse sans clôture en cours / Banque sans rapprochement en cours - Solde confirmé</li>
                                        <li><span class="badge bg-warning text-dark">En cours</span> : Clôture ou rapprochement en cours - Solde provisoire pouvant évoluer</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action serveur pour rafraîchir les données -->
    <record id="action_refresh_dashboard" model="ir.actions.server">
        <field name="name">Rafraîchir le Dashboard</field>
        <field name="model_id" ref="model_treasury_dashboard"/>
        <field name="binding_model_id" ref="model_treasury_dashboard"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.client',
    'tag': 'reload',
}
        </field>
    </record>

</odoo>
