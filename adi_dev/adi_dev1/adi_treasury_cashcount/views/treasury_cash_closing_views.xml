<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Héritage de la vue Form de treasury.cash.closing pour ajouter le comptage -->
    <record id="view_treasury_cash_closing_form_cashcount" model="ir.ui.view">
        <field name="name">treasury.cash.closing.form.cashcount</field>
        <field name="model">treasury.cash.closing</field>
        <field name="inherit_id" ref="adi_treasury.view_treasury_cash_closing_form"/>
        <field name="arch" type="xml">

            <!-- Ajouter des boutons après le bouton "Ajouter une opération" -->
            <xpath expr="//header/button[@name='action_create_manual_operation']" position="after">
                <button name="action_auto_fill_count_lines"
                        string="Initialiser le comptage"
                        type="object"
                        class="btn-secondary"
                        icon="fa-list-ol"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="action_clear_count_lines"
                        string="Effacer le comptage"
                        type="object"
                        class="btn-secondary"
                        icon="fa-eraser"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            </xpath>

            <!-- Ajouter le comptage après le champ balance_end_real -->
            <xpath expr="//field[@name='balance_end_real']" position="after">
                <field name="use_cash_count" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                <field name="counted_total" widget="monetary" attrs="{'invisible': [('use_cash_count', '=', False)]}"/>
            </xpath>

            <!-- Ajouter un notebook avec le comptage détaillé -->
            <xpath expr="//notebook" position="inside">
                <page string="Comptage des billets et pièces" name="cash_count" attrs="{'invisible': [('use_cash_count', '=', False)]}">
                    <group>
                        <group>
                            <div class="alert alert-info" role="alert">
                                <strong>Instructions :</strong>
                                <ul>
                                    <li>Cliquez sur "Initialiser le comptage" pour créer les lignes de comptage</li>
                                    <li>Saisissez le nombre de billets/pièces pour chaque dénomination</li>
                                    <li>Le total est calculé automatiquement et mis à jour dans le solde réel</li>
                                </ul>
                            </div>
                        </group>
                    </group>

                    <field name="count_line_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                        <tree editable="bottom" create="true" delete="true">
                            <field name="denomination_id"
                                   options="{'no_create': True}"
                                   domain="[('currency_id', '=', parent.currency_id)]"
                                   required="1"/>
                            <field name="denomination_type" string="Type"/>
                            <field name="denomination_value" string="Valeur unitaire" widget="monetary"/>
                            <field name="quantity" string="Nombre" sum="Total"/>
                            <field name="subtotal" widget="monetary" sum="Total général"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>

                    <!-- Résumé du comptage -->
                    <group class="mt-3">
                        <group>
                            <label for="counted_total" string="Total compté" class="font-weight-bold"/>
                            <div class="o_row">
                                <field name="counted_total" widget="monetary" readonly="1" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <label for="balance_end_theoretical" string="Solde théorique"/>
                            <field name="balance_end_theoretical" widget="monetary" readonly="1"/>

                            <label for="difference" string="Écart"
                                   class="font-weight-bold"
                                   attrs="{'invisible': [('difference', '=', 0)]}"/>
                            <field name="difference"
                                   widget="monetary"
                                   readonly="1"
                                   attrs="{'invisible': [('difference', '=', 0)]}"
                                   class="text-danger font-weight-bold"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
