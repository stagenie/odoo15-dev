<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Bon de Transfert Report Action -->
        <record id="action_report_bon_transfert" model="ir.actions.report">
            <field name="name">Bon de Transfert</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">adi_magimed.report_bon_transfert</field>
            <field name="report_file">adi_magimed.report_bon_transfert</field>
            <field name="print_report_name">'Bon_Transfert_%s' % object.name.replace('/', '_')</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_magimed"/>
        </record>

        <!-- Bon de Transfert Report Template -->
        <template id="report_bon_transfert">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center">
                                <h2>BON DE TRANSFERT</h2>
                                <h3 t-field="doc.name"/>
                            </div>

                            <div class="row mt-4">
                                <div class="col-6">
                                    <div class="card">
                                        <div class="card-header bg-light">
                                            <strong>ENTREPOT SOURCE</strong>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-sm table-borderless mb-0">
                                                <tr>
                                                    <td><strong>Entrepot:</strong></td>
                                                    <td>
                                                        <t t-if="doc.source_warehouse_id">
                                                            <span t-field="doc.source_warehouse_id.name"/>
                                                        </t>
                                                        <t t-else="">-</t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Emplacement:</strong></td>
                                                    <td><span t-field="doc.location_id.complete_name"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card">
                                        <div class="card-header bg-light">
                                            <strong>ENTREPOT DESTINATION</strong>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-sm table-borderless mb-0">
                                                <tr>
                                                    <td><strong>Entrepot:</strong></td>
                                                    <td>
                                                        <t t-if="doc.dest_warehouse_id">
                                                            <span t-field="doc.dest_warehouse_id.name"/>
                                                        </t>
                                                        <t t-else="">-</t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><strong>Emplacement:</strong></td>
                                                    <td><span t-field="doc.location_dest_id.complete_name"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-6">
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td><strong>Date:</strong></td>
                                            <td><span t-field="doc.scheduled_date" t-options="{'widget': 'date'}"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Origine:</strong></td>
                                            <td><span t-field="doc.origin"/></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6">
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td><strong>Responsable:</strong></td>
                                            <td><span t-field="doc.user_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Etat:</strong></td>
                                            <td><span t-field="doc.state"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <h4 class="mt-4">PRODUITS TRANSFERES</h4>
                            <table class="table table-sm table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th style="width: 12%;">Reference</th>
                                        <th style="width: 30%;">Designation</th>
                                        <th class="text-center" style="width: 10%;">Quantite</th>
                                        <th style="width: 10%;">Unite</th>
                                        <th style="width: 18%;">N Lot</th>
                                        <th style="width: 20%;">Date Expiration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.move_line_ids_without_package" t-as="line">
                                        <tr>
                                            <td><span t-field="line.product_id.default_code"/></td>
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td class="text-center">
                                                <strong><span t-field="line.qty_done"/></strong>
                                            </td>
                                            <td><span t-field="line.product_uom_id.name"/></td>
                                            <td>
                                                <t t-if="line.lot_id">
                                                    <strong><span t-field="line.lot_id.name"/></strong>
                                                </t>
                                                <t t-elif="line.lot_name">
                                                    <strong><span t-field="line.lot_name"/></strong>
                                                </t>
                                                <t t-else="">-</t>
                                            </td>
                                            <td>
                                                <t t-if="line.lot_id.expiration_date">
                                                    <span t-field="line.lot_id.expiration_date" t-options="{'widget': 'date'}"/>
                                                    <t t-set="days_left" t-value="line.lot_id.days_to_expiration"/>
                                                    <t t-if="days_left and days_left &lt;= 30">
                                                        <span class="badge badge-warning" style="font-size: 0.8em;">
                                                            <t t-esc="days_left"/> jours
                                                        </span>
                                                    </t>
                                                </t>
                                                <t t-else="">-</t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <t t-if="doc.transfer_notes">
                                <h5 class="mt-4">Notes</h5>
                                <p t-field="doc.transfer_notes"/>
                            </t>

                            <div class="row mt-5">
                                <div class="col-3 text-center">
                                    <p><strong>Expedie par:</strong></p>
                                    <br/><br/>
                                    <p>________________________</p>
                                    <p class="small">Date: ___/___/_____</p>
                                </div>
                                <div class="col-3 text-center">
                                    <p><strong>Transporte par:</strong></p>
                                    <br/><br/>
                                    <p>________________________</p>
                                    <p class="small">Date: ___/___/_____</p>
                                </div>
                                <div class="col-3 text-center">
                                    <p><strong>Recu par:</strong></p>
                                    <br/><br/>
                                    <p>________________________</p>
                                    <p class="small">Date: ___/___/_____</p>
                                </div>
                                <div class="col-3 text-center">
                                    <p><strong>Controle par:</strong></p>
                                    <br/><br/>
                                    <p>________________________</p>
                                    <p class="small">Date: ___/___/_____</p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
