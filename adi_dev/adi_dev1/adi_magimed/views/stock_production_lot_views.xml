<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Lot Form Extension -->
        <record id="view_production_lot_form_magimed" model="ir.ui.view">
            <field name="name">stock.production.lot.form.magimed</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']" position="after">
                    <group name="expiration_group" string="Expiration &amp; Alertes">
                        <group>
                            <field name="expiration_date" string="Date de Peremption"/>
                            <field name="days_to_expiration"/>
                            <field name="expiration_status" widget="badge"
                                   decoration-success="expiration_status == 'ok'"
                                   decoration-warning="expiration_status == 'warning'"
                                   decoration-danger="expiration_status in ('danger', 'expired')"/>
                        </group>
                        <group>
                            <field name="lot_alert_days" string="Nb Jours Avant Alerte"/>
                            <field name="alert_date" string="Date d'Alerte"/>
                            <field name="is_expired" invisible="1"/>
                            <field name="is_expiring_soon" invisible="1"/>
                        </group>
                    </group>
                    <group name="stock_group" string="Stock">
                        <group>
                            <field name="total_qty"/>
                        </group>
                        <group>
                            <field name="location_qty_info" widget="text"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_send_expiration_alert" type="object"
                                string="Envoyer Alerte"
                                class="btn-warning"
                                attrs="{'invisible': [('is_expiring_soon', '=', False)]}"/>
                    </header>
                </xpath>
            </field>
        </record>

        <!-- Lot Tree View -->
        <record id="view_production_lot_tree_magimed" model="ir.ui.view">
            <field name="name">stock.production.lot.tree.magimed</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="expiration_date" optional="show"/>
                    <field name="days_to_expiration" optional="show"/>
                    <field name="expiration_status" widget="badge"
                           decoration-success="expiration_status == 'ok'"
                           decoration-warning="expiration_status == 'warning'"
                           decoration-danger="expiration_status in ('danger', 'expired')"
                           optional="show"/>
                    <field name="total_qty" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Lot Search View -->
        <record id="view_production_lot_search_magimed" model="ir.ui.view">
            <field name="name">stock.production.lot.search.magimed</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.search_product_lot_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <separator/>
                    <filter name="has_stock" string="En Stock"
                            domain="[('product_qty', '>', 0)]"/>
                    <filter name="expiring" string="Expire Bientot"
                            domain="[('is_expiring_soon', '=', True)]"/>
                    <filter name="expired" string="Expire"
                            domain="[('is_expired', '=', True)]"/>
                    <separator/>
                    <filter name="expiring_7_days" string="Expire sous 7 jours"
                            domain="[('expiration_date', '!=', False), ('days_to_expiration', '&lt;=', 7), ('days_to_expiration', '&gt;=', 0)]"/>
                    <filter name="expiring_30_days" string="Expire sous 30 jours"
                            domain="[('expiration_date', '!=', False), ('days_to_expiration', '&lt;=', 30), ('days_to_expiration', '&gt;=', 0)]"/>
                    <filter name="expiring_60_days" string="Expire sous 60 jours"
                            domain="[('expiration_date', '!=', False), ('days_to_expiration', '&lt;=', 60), ('days_to_expiration', '&gt;=', 0)]"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter name="group_by_expiration_status" string="Statut Expiration"
                            context="{'group_by': 'expiration_status'}"/>
                    <filter name="group_by_expiration_date" string="Date Expiration"
                            context="{'group_by': 'expiration_date:month'}"/>
                </xpath>
            </field>
        </record>

        <!-- Lot Kanban View -->
        <record id="view_production_lot_kanban_magimed" model="ir.ui.view">
            <field name="name">stock.production.lot.kanban.magimed</field>
            <field name="model">stock.production.lot</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="expiration_date"/>
                    <field name="days_to_expiration"/>
                    <field name="expiration_status"/>
                    <field name="total_qty"/>
                    <field name="product_uom_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="product_id"/>
                                        </span>
                                    </div>
                                    <div>
                                        <span t-att-class="'badge ' +
                                            (record.expiration_status.raw_value == 'ok' ? 'badge-success' :
                                             record.expiration_status.raw_value == 'warning' ? 'badge-warning' :
                                             'badge-danger')">
                                            <t t-if="record.expiration_status.raw_value == 'ok'">OK</t>
                                            <t t-elif="record.expiration_status.raw_value == 'warning'">Attention</t>
                                            <t t-elif="record.expiration_status.raw_value == 'danger'">Urgent</t>
                                            <t t-else="">Expire</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Expiration:</strong>
                                        <field name="expiration_date"/>
                                        (<field name="days_to_expiration"/> jours)
                                    </div>
                                    <div>
                                        <strong>Stock:</strong>
                                        <field name="total_qty"/>
                                        <field name="product_uom_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
