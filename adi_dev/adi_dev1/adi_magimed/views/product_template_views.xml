<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Product Template Form Extension -->
        <record id="view_product_template_form_magimed" model="ir.ui.view">
            <field name="name">product.template.form.magimed</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='traceability']" position="inside">
                    <field name="expiration_alert_days"
                           attrs="{'invisible': [('tracking', '=', 'none')]}"/>
                    <field name="auto_lot_on_receipt"
                           attrs="{'invisible': [('tracking', '=', 'none')]}"/>
                    <field name="lot_prefix"
                           attrs="{'invisible': ['|', ('tracking', '=', 'none'), ('auto_lot_on_receipt', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Product Product Form Extension -->
        <record id="view_product_product_form_magimed" model="ir.ui.view">
            <field name="name">product.product.form.magimed</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_lots" type="object"
                            class="oe_stat_button" icon="fa-barcode"
                            attrs="{'invisible': [('tracking', '=', 'none')]}">
                        <field name="lot_count" string="Lots" widget="statinfo"/>
                    </button>
                    <button name="action_view_expiring_lots" type="object"
                            class="oe_stat_button" icon="fa-exclamation-triangle text-warning"
                            attrs="{'invisible': ['|', ('tracking', '=', 'none'), ('expiring_lot_count', '=', 0)]}">
                        <field name="expiring_lot_count" string="Expirant" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>

        <!-- Product Template Tree Extension -->
        <record id="view_product_template_tree_magimed" model="ir.ui.view">
            <field name="name">product.template.tree.magimed</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="tracking" optional="show"/>
                    <field name="expiration_alert_days" optional="hide"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
