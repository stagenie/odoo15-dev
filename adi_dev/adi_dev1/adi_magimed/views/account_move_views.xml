<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account Move Form Extension -->
        <record id="view_account_move_form_magimed" model="ir.ui.view">
            <field name="name">account.move.form.magimed</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add Caution tab -->
                <xpath expr="//page[@id='other_tab']" position="after">
                    <page string="Caution" name="caution_tab"
                          attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                        <group>
                            <group string="Configuration Caution">
                                <field name="has_caution"/>
                                <field name="caution_amount"
                                       attrs="{'invisible': [('has_caution', '=', False)],
                                              'required': [('has_caution', '=', True)]}"/>
                                <field name="caution_duration_months"
                                       attrs="{'invisible': [('has_caution', '=', False)]}"/>
                                <field name="caution_alert_days"
                                       attrs="{'invisible': [('has_caution', '=', False)]}"/>
                            </group>
                            <group string="Statut Caution"
                                   attrs="{'invisible': [('has_caution', '=', False)]}">
                                <field name="caution_refund_date"/>
                                <field name="caution_alert_date"/>
                                <field name="caution_status" widget="badge"
                                       decoration-info="caution_status == 'pending'"
                                       decoration-warning="caution_status == 'alert'"
                                       decoration-danger="caution_status == 'due'"
                                       decoration-success="caution_status == 'refunded'"/>
                                <field name="caution_refunded"/>
                                <field name="caution_refund_actual_date"
                                       attrs="{'invisible': [('caution_refunded', '=', False)]}"/>
                            </group>
                        </group>
                        <group string="Notes" attrs="{'invisible': [('has_caution', '=', False)]}">
                            <field name="caution_notes" nolabel="1" placeholder="Notes concernant la caution..."/>
                        </group>
                    </page>
                </xpath>

                <!-- Add button in header -->
                <xpath expr="//header/button[@name='action_post']" position="after">
                    <button name="action_mark_caution_refunded" type="object"
                            string="Marquer Caution Remboursee"
                            class="btn-success"
                            attrs="{'invisible': ['|', ('has_caution', '=', False), ('caution_refunded', '=', True)]}"
                            confirm="Confirmer que la caution a ete remboursee?"/>
                    <button name="action_send_caution_alert" type="object"
                            string="Envoyer Alerte Caution"
                            class="btn-warning"
                            attrs="{'invisible': ['|', ('has_caution', '=', False), ('caution_status', 'not in', ['alert', 'due'])]}"/>
                </xpath>
            </field>
        </record>

        <!-- Account Move Tree View for Caution -->
        <record id="view_account_move_tree_caution" model="ir.ui.view">
            <field name="name">account.move.tree.caution</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree string="Factures avec Caution" decoration-danger="caution_status == 'due'"
                      decoration-warning="caution_status == 'alert'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="invoice_date"/>
                    <field name="amount_total"/>
                    <field name="caution_amount"/>
                    <field name="caution_refund_date"/>
                    <field name="caution_status" widget="badge"
                           decoration-info="caution_status == 'pending'"
                           decoration-warning="caution_status == 'alert'"
                           decoration-danger="caution_status == 'due'"
                           decoration-success="caution_status == 'refunded'"/>
                    <field name="caution_refunded"/>
                </tree>
            </field>
        </record>

        <!-- Account Move Search Extension -->
        <record id="view_account_move_search_magimed" model="ir.ui.view">
            <field name="name">account.move.search.magimed</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='late']" position="after">
                    <separator/>
                    <filter name="has_caution" string="Avec Caution"
                            domain="[('has_caution', '=', True)]"/>
                    <filter name="not_refunded" string="Non Remboursee"
                            domain="[('has_caution', '=', True), ('caution_refunded', '=', False)]"/>
                    <filter name="caution_due" string="Caution Echue"
                            domain="[('caution_status', '=', 'due')]"/>
                    <filter name="caution_alert" string="Caution en Alerte"
                            domain="[('caution_status', 'in', ['alert', 'due'])]"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter name="group_by_caution_status" string="Statut Caution"
                            context="{'group_by': 'caution_status'}"/>
                    <filter name="group_by_refund_date" string="Date Remboursement"
                            context="{'group_by': 'caution_refund_date:month'}"/>
                </xpath>
            </field>
        </record>

        <!-- Account Move Kanban for Caution -->
        <record id="view_account_move_kanban_caution" model="ir.ui.view">
            <field name="name">account.move.kanban.caution</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="caution_status">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="invoice_date"/>
                    <field name="amount_total"/>
                    <field name="caution_amount"/>
                    <field name="caution_refund_date"/>
                    <field name="caution_status"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
                                        </span>
                                    </div>
                                    <field name="caution_status" widget="label_selection"
                                           options="{'classes': {
                                               'pending': 'info',
                                               'alert': 'warning',
                                               'due': 'danger',
                                               'refunded': 'success'
                                           }}"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Caution:</strong>
                                        <field name="caution_amount" widget="monetary"/>
                                    </div>
                                    <div>
                                        <strong>Echeance:</strong>
                                        <field name="caution_refund_date"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
