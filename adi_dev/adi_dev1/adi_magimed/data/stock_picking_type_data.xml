<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Virtual Location for Production -->
        <record id="stock_location_production" model="stock.location">
            <field name="name">Production</field>
            <field name="usage">production</field>
            <field name="location_id" ref="stock.stock_location_locations_virtual"/>
        </record>

        <!-- Virtual Location for Consumption -->
        <record id="stock_location_consumption" model="stock.location">
            <field name="name">Consommation</field>
            <field name="usage">inventory</field>
            <field name="location_id" ref="stock.stock_location_locations_virtual"/>
        </record>

        <!-- Picking Type: Stock Entry (Bon d'Entree) -->
        <record id="picking_type_stock_entry" model="stock.picking.type">
            <field name="name">Bon d'Entree</field>
            <field name="code">incoming</field>
            <field name="sequence_code">BE</field>
            <field name="use_create_lots">True</field>
            <field name="use_existing_lots">True</field>
            <field name="show_operations">True</field>
            <field name="show_reserved">True</field>
            <field name="default_location_src_id" ref="stock_location_production"/>
            <field name="default_location_dest_id" ref="stock.stock_location_stock"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="sequence_id" ref="seq_stock_entry"/>
        </record>

        <!-- Picking Type: Stock Exit (Bon de Sortie) -->
        <record id="picking_type_stock_exit" model="stock.picking.type">
            <field name="name">Bon de Sortie</field>
            <field name="code">outgoing</field>
            <field name="sequence_code">BS</field>
            <field name="use_create_lots">False</field>
            <field name="use_existing_lots">True</field>
            <field name="show_operations">True</field>
            <field name="show_reserved">True</field>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock_location_consumption"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="sequence_id" ref="seq_stock_exit"/>
        </record>

        <!-- Picking Type: Internal Transfer (Bon de Transfert) -->
        <record id="picking_type_stock_transfer" model="stock.picking.type">
            <field name="name">Bon de Transfert</field>
            <field name="code">internal</field>
            <field name="sequence_code">BT</field>
            <field name="use_create_lots">False</field>
            <field name="use_existing_lots">True</field>
            <field name="show_operations">True</field>
            <field name="show_reserved">True</field>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock.stock_location_stock"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="sequence_id" ref="seq_stock_transfer"/>
        </record>

    </data>
</odoo>
