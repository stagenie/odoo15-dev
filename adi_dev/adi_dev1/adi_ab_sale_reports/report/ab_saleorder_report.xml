<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- RAPPORT BON DE COMMANDE PERSONNALISÉ AB   -->
    <!-- - Sans colonne TVA                        -->
    <!-- - Colonne remise avec 2 décimales         -->
    <!-- - Total TTC dans les lignes               -->
    <!-- - En bas: Total remise, Net à payer       -->
    <!-- - Délai de livraison                      -->
    <!-- - Modalité de paiement                    -->
    <!-- ========================================== -->

    <template id="report_ab_saleorder_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="address">
                <div style="line-height: 1.5; font-size:14px;">
                    <div>
                        <strong><span t-field="doc.partner_id.name"/></strong>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="doc.partner_id.street"/>
                    </div>
                </div>
                <div style="line-height: 1.5; padding-top:15px; font-size:12px;">
                    <div>
                        <span t-if="doc.partner_id.rc"><strong>N° RC :</strong> <span t-field="doc.partner_id.rc"/></span>
                        <span t-if="doc.partner_id.ai"><strong>  AI :</strong> <span t-field="doc.partner_id.ai"/></span>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="doc.partner_id.nis"><strong>NIS :</strong> <span t-field="doc.partner_id.nis"/></span>
                        <span t-if="doc.partner_id.nif"><strong>  NIF :</strong> <span t-field="doc.partner_id.nif"/></span>
                    </div>
                </div>
            </t>

            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span>Bon de Commande N° </span>
                    <span t-field="doc.name"/>
                </h2>

                <!-- Informations en haut -->
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Votre référence:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2">
                        <strong>Date de commande:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Vendeur:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>

                <!-- Vérifier s'il y a des remises -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>
                <!-- Calculer le total des remises -->
                <t t-set="total_discount" t-value="sum((l.price_unit * l.product_uom_qty * l.discount / 100) for l in doc.order_line if not l.display_type and l.discount)"/>

                <!-- Table des lignes: N°, Description, Qté, Prix U, Remise, Montant -->
                <!-- SANS colonne TVA -->
                <t t-set="line_num" t-value="0"/>
                <table class="table table-sm o_main_table">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_num" class="text-center" style="width: 30px;">N°</th>
                            <th name="th_description" class="text-start">Description</th>
                            <th name="th_quantity" class="text-end">Quantité</th>
                            <th name="th_priceunit" class="text-end">Prix U</th>
                            <th name="th_discount" t-if="display_discount" class="text-end">Remise %</th>
                            <!-- PAS DE COLONNE TVA -->
                            <th name="th_subtotal" class="text-end">Montant</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-if="not line.display_type">
                                <t t-set="line_num" t-value="line_num + 1"/>
                            </t>
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_num" class="text-center"><span t-esc="line_num"/></td>
                                    <td name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_quantity" class="text-end">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-end">
                                        <!-- Prix unitaire TTC = prix_unit * (1 + taux_tva) -->
                                        <t t-set="price_unit_ttc" t-value="line.price_unit * (1 + sum(line.tax_id.mapped('amount')) / 100) if line.tax_id else line.price_unit"/>
                                        <span t-esc="price_unit_ttc"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                    <td t-if="display_discount" class="text-end">
                                        <!-- Remise avec 2 décimales -->
                                        <span t-if="line.discount > 0" t-esc="'%.2f' % line.discount"/>
                                    </td>
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <!-- Total TTC de la ligne -->
                                        <span t-field="line.price_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Totaux en bas -->
                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <!-- Colonne gauche: Délai de livraison + Modalités de paiement -->
                        <div class="col-6">
                            <table class="table table-sm">
                                <tr t-if="doc.delivery_deadline">
                                    <td><strong>Délai de livraison:</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.delivery_deadline"/>
                                    </td>
                                </tr>
                                <tr t-if="doc.payment_modality_text">
                                    <td><strong>Modalité de paiement:</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.payment_modality_text"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <!-- Colonne droite: Total remise + Net à payer (pas de HT ni TVA) -->
                        <div class="col-6">
                            <table class="table table-sm">
                                <!-- Total remise si présent -->
                                <tr t-if="display_discount and total_discount > 0" groups="product.group_discount_per_so_line">
                                    <td>Total remise</td>
                                    <td class="text-end">
                                        <span t-esc="total_discount"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <!-- Net à payer (Total TTC) -->
                                <tr class="border-black o_total">
                                    <td><strong>Net à payer</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="oe_structure"/>

                <p t-field="doc.note"/>
                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
            </div>
        </t>
    </template>

    <template id="report_ab_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="adi_ab_sale_reports.report_ab_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <!-- Définir le rapport Bon de Commande -->
    <record id="action_report_ab_saleorder" model="ir.actions.report">
        <field name="name">Bon de Commande AB</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_ab_sale_reports.report_ab_saleorder</field>
        <field name="report_file">adi_ab_sale_reports.report_ab_saleorder</field>
        <field name="print_report_name">'Bon de Commande - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
