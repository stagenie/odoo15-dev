<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- RAPPORT PROFORMA PERSONNALISÉ AB          -->
    <!-- - Sans échéance en haut                   -->
    <!-- - Colonnes standard: Description, Qté, Prix, Remise, TVA, Total HT -->
    <!-- - En bas: Total HT, TVA, Net à payer      -->
    <!-- - Offre valable jusqu'à...                -->
    <!-- ========================================== -->

    <template id="report_ab_proforma_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="address">
                <div style="line-height: 1.5; font-size:14px;">
                    <div>
                        <strong><span t-field="doc.partner_id.name"/></strong>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="doc.partner_id.street"/>
                    </div>
                </div>
                <div style="line-height: 1.5; padding-top:15px; font-size:12px;">
                    <div>
                        <span t-if="doc.partner_id.rc"><strong>N° RC :</strong> <span t-field="doc.partner_id.rc"/></span>
                        <span t-if="doc.partner_id.ai"><strong>  AI :</strong> <span t-field="doc.partner_id.ai"/></span>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="doc.partner_id.nis"><strong>NIS :</strong> <span t-field="doc.partner_id.nis"/></span>
                        <span t-if="doc.partner_id.nif"><strong>  NIF :</strong> <span t-field="doc.partner_id.nif"/></span>
                    </div>
                </div>
            </t>

            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt16">
                    <span>Facture Proforma N° </span>
                    <span t-field="doc.name"/>
                </h2>

                <!-- Informations en haut SANS échéance -->
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Votre référence:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order" class="col-auto col-3 mw-100 mb-2">
                        <strong>Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <!-- PAS D'ÉCHÉANCE ICI -->
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Vendeur:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>

                <!-- Vérifier s'il y a des remises -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                <!-- Table des lignes: N°, TOUT standard (HT, TVA, Remise) -->
                <t t-set="line_num" t-value="0"/>
                <table class="table table-sm o_main_table">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_num" class="text-center" style="width: 30px;">N°</th>
                            <th name="th_description" class="text-start">Description</th>
                            <th name="th_quantity" class="text-end">Quantité</th>
                            <th name="th_priceunit" class="text-end">Prix unitaire</th>
                            <th name="th_discount" t-if="display_discount" class="text-end">Remise %</th>
                            <th name="th_taxes" class="text-end">TVA</th>
                            <th name="th_subtotal" class="text-end">Montant HT</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.order_line" t-as="line">
                            <t t-if="not line.display_type">
                                <t t-set="line_num" t-value="line_num + 1"/>
                            </t>
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td name="td_num" class="text-center"><span t-esc="line_num"/></td>
                                    <td name="td_name"><span t-field="line.name"/></td>
                                    <td name="td_quantity" class="text-end">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-end">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-end">
                                        <span t-if="line.discount > 0" t-esc="'%.2f' % line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-end">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <span t-field="line.price_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Totaux en bas -->
                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <!-- Colonne gauche: Offre valable jusqu'à -->
                        <div class="col-6">
                            <t t-if="doc.quotation_validity_date or doc.validity_date">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Offre valable jusqu'au:</strong></td>
                                        <td class="text-end">
                                            <span t-if="doc.quotation_validity_date" t-field="doc.quotation_validity_date"/>
                                            <span t-elif="doc.validity_date" t-field="doc.validity_date"/>
                                        </td>
                                    </tr>
                                </table>
                            </t>
                        </div>
                        <!-- Colonne droite: Total HT, TVA, Net à payer -->
                        <div class="col-6">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td><strong>Total HT</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_untaxed"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>TVA</td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_tax"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black o_total">
                                    <td><strong>Net à payer</strong></td>
                                    <td class="text-end">
                                        <span t-field="doc.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="oe_structure"/>

                <p t-field="doc.note"/>
                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
            </div>
        </t>
    </template>

    <template id="report_ab_proforma">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="adi_ab_sale_reports.report_ab_proforma_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <!-- Définir le rapport Proforma -->
    <record id="action_report_ab_proforma" model="ir.actions.report">
        <field name="name">Proforma AB</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_ab_sale_reports.report_ab_proforma</field>
        <field name="report_file">adi_ab_sale_reports.report_ab_proforma</field>
        <field name="print_report_name">'Proforma - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
