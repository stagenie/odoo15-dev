<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire pour les factures clients -->
        <record id="view_move_form_exclude_balance_inherit" model="ir.ui.view">
            <field name="name">account.move.form.exclude.balance.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Ajout du champ dans l'onglet principal, aprÃ¨s le champ payment_reference -->
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="exclude_from_partner_balance"
                           attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}"/>
                </xpath>
            </field>
        </record>

        <!-- Vue liste/arbre pour les factures -->
        <record id="view_invoice_tree_exclude_balance_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.exclude.balance.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total_signed']" position="after">
                    <field name="exclude_from_partner_balance" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Vue recherche pour les factures -->
        <record id="view_account_invoice_filter_exclude_balance_inherit" model="ir.ui.view">
            <field name="name">account.move.filter.exclude.balance.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='late']" position="after">
                    <separator/>
                    <filter string="Exclues du solde" name="excluded_from_balance"
                            domain="[('exclude_from_partner_balance', '=', True)]"/>
                    <filter string="Incluses au solde" name="included_in_balance"
                            domain="[('exclude_from_partner_balance', '=', False)]"/>
                </xpath>
                <xpath expr="//group[@name='group_by']" position="inside">
                    <filter string="Exclusion du solde" name="group_by_exclude_balance"
                            context="{'group_by': 'exclude_from_partner_balance'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
