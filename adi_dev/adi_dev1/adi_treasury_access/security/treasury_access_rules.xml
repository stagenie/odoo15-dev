             ================================================================ -->

        <!-- ================================================================
             RÈGLES POUR LES CAISSES (treasury.cash)
             ================================================================ -->

        <!-- Désactiver l'ancienne règle utilisateur si elle existe -->
        <record id="adi_treasury.treasury_cash_rule_user" model="ir.rule">
            <field name="active" eval="False"/>
        </record>

        <!-- Nouvelle règle pour les utilisateurs -->
        <record id="treasury_cash_access_user" model="ir.rule">
            <field name="name">Caisses : utilisateurs autorisés uniquement</field>
            <field name="model_id" ref="adi_treasury.model_treasury_cash"/>
            <field name="domain_force">[
                '|', '|',
                ('user_ids', 'in', user.id),
                ('responsible_id', '=', user.id),
                ('create_uid', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('adi_treasury.group_treasury_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

