<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_invoice_date_sequence" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.invoice.date.sequence</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="invoice_date_sequence_control_setting">
                    <div class="o_setting_left_pane">
                        <field name="invoice_date_sequence_control"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="invoice_date_sequence_control"/>
                        <div class="text-muted">
                            Empêche la validation de factures avec des dates incohérentes
                            par rapport à leur numéro séquentiel.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('invoice_date_sequence_control', '=', False)]}">
                            <div class="row mt16">
                                <label for="invoice_date_sequence_control_date" class="col-lg-4 o_light_label"/>
                                <field name="invoice_date_sequence_control_date"/>
                            </div>
                            <div class="text-muted mt8">
                                Les factures avec une date antérieure à cette date ne seront pas contrôlées.
                                Laissez vide pour contrôler toutes les factures.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
