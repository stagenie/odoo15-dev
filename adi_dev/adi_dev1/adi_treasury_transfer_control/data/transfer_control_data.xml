<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- ===============================================================
             PARAMÈTRES PAR DÉFAUT
             =============================================================== -->

        <!-- Activer le contrôle des transferts par défaut -->
        <record id="config_transfer_control_enabled" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.control_enabled</field>
            <field name="value">True</field>
        </record>

        <!-- Contrôle automatique activé -->
        <record id="config_transfer_auto_check" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.auto_check</field>
            <field name="value">True</field>
        </record>

        <!-- Bloquer si solde insuffisant -->
        <record id="config_transfer_block_insufficient" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.block_insufficient</field>
            <field name="value">True</field>
        </record>

        <!-- Bloquer si découvert dépassé -->
        <record id="config_transfer_block_overdraft" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.block_overdraft</field>
            <field name="value">True</field>
        </record>

        <!-- Bloquer si capacité dépassée -->
        <record id="config_transfer_block_capacity" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.block_capacity</field>
            <field name="value">True</field>
        </record>

        <!-- Autoriser les managers à forcer -->
        <record id="config_transfer_allow_manager_force" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.allow_manager_force</field>
            <field name="value">True</field>
        </record>

        <!-- Journaliser les contrôles -->
        <record id="config_transfer_log_controls" model="ir.config_parameter">
            <field name="key">adi_treasury_transfer_control.log_controls</field>
            <field name="value">True</field>
        </record>

    </data>
</odoo>
