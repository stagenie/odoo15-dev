<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Désactiver la création rapide de partenaires dans les paiements
        Ceci empêche les utilisateurs de créer de nouveaux contacts à la volée
    -->

    <!-- Vue formulaire des paiements - Partenaire Client -->
    <record id="view_account_payment_form_restrict_partner" model="ir.ui.view">
        <field name="name">account.payment.form.restrict.partner</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- Désactiver pour le champ partner_id Client (première occurrence) -->
            <xpath expr="(//field[@name='partner_id'])[1]" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}</attribute>
            </xpath>

            <!-- Désactiver pour le champ partner_id Fournisseur (deuxième occurrence) -->
            <xpath expr="(//field[@name='partner_id'])[2]" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Vue liste des paiements -->
    <record id="view_account_payment_tree_restrict_partner" model="ir.ui.view">
        <field name="name">account.payment.tree.restrict.partner</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}</attribute>
            </field>
        </field>
    </record>

    <!-- Vue kanban des paiements -->
    <record id="view_account_payment_kanban_restrict_partner" model="ir.ui.view">
        <field name="name">account.payment.kanban.restrict.partner</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_kanban"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_create': True, 'no_create_edit': True, 'no_quick_create': True}</attribute>
            </field>
        </field>
    </record>

</odoo>
