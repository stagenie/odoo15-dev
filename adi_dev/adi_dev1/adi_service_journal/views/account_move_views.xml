<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================================ -->
        <!-- Modifier le domaine du journal selon is_service_invoice      -->
        <!-- ============================================================ -->
        <record id="view_move_form_service_journal_domain" model="ir.ui.view">
            <field name="name">account.move.form.service.journal.domain</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority">52</field>
            <field name="arch" type="xml">
                <!-- Modifier le domaine du champ journal_id pour filtrer selon is_service_invoice -->
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="domain">[
                        ('type', '=', 'purchase'),
                        ('is_service_journal', '=', is_service_invoice)
                    ] if move_type in ('in_invoice', 'in_refund') else []</attribute>
                    <attribute name="context">{
                        'service_journal_only': is_service_invoice if move_type in ('in_invoice', 'in_refund') else False,
                        'exclude_service_journal': not is_service_invoice if move_type in ('in_invoice', 'in_refund') else False
                    }</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
