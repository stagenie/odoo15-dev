<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ajout du champ Type de rapport sur le formulaire journal -->
    <record id="view_account_journal_form_report_type" model="ir.ui.view">
        <field name="name">account.journal.form.report.type</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="invoice_report_type"
                       attrs="{'invisible': [('type', 'not in', ['sale'])]}"/>
            </xpath>
        </field>
    </record>

</odoo>
