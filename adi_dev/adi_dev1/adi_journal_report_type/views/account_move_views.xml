<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ajout des boutons d'impression conditionnels sur la facture -->
    <record id="view_move_form_print_buttons" model="ir.ui.view">
        <field name="name">account.move.form.print.buttons</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- Champ invisible pour la condition -->
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="invoice_report_type" invisible="1"/>
            </xpath>

            <!-- Boutons d'impression avant le champ state (apparaissent en dernier) -->
            <xpath expr="//header/field[@name='state']" position="before">
                <!-- Bouton AB Facture - visible si type = invoice -->
                <button name="action_print_ab_invoice"
                        type="object"
                        string="Imprimer Facture"
                        class="btn-success"
                        attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('invoice_report_type', '!=', 'invoice')]}"
                        groups="account.group_account_invoice"/>

                <!-- Bouton Vente - visible si type = sale -->
                <button name="action_print_vente"
                        type="object"
                        string="Imprimer Vente"
                        class="btn-warning"
                        attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('invoice_report_type', '!=', 'sale')]}"
                        groups="account.group_account_invoice"/>

                <!-- Bouton Vente TTC - visible si type = sale -->
                <button name="action_print_vente_ttc"
                        type="object"
                        string="Imprimer Vente TTC"
                        class="btn-warning"
                        attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('invoice_report_type', '!=', 'sale')]}"
                        groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>

</odoo>
