<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_print_warning_wizard_form" model="ir.ui.view">
        <field name="name">invoice.print.warning.wizard.form</field>
        <field name="model">invoice.print.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Avertissement">
                <group>
                    <field name="invoice_id" invisible="1"/>
                    <field name="warning_message" nolabel="1" readonly="1"
                           widget="text" style="color: #856404; background-color: #fff3cd; padding: 10px; border-radius: 5px;"/>
                </group>
                <footer>
                    <button name="action_confirm_print" string="Continuer l'impression"
                            type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Annuler"
                            type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
