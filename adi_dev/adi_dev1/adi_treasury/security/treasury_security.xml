            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- RÈGLES POUR LES LIGNES DE CLÔTURE            -->
        <!-- ============================================ -->

        <record id="treasury_cash_closing_line_rule_user" model="ir.rule">
            <field name="name">Lignes de clôture : caisses autorisées uniquement</field>
            <field name="model_id" ref="model_treasury_cash_closing_line"/>
            <field name="domain_force">[
                '|', '|',
                ('closing_id.cash_id.user_ids', 'in', [user.id]),
                ('closing_id.cash_id.responsible_id', '=', user.id),
                ('closing_id.cash_id.create_uid', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_treasury_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="treasury_cash_closing_line_rule_manager" model="ir.rule">
            <field name="name">Lignes de clôture : accès total pour managers</field>
            <field name="model_id" ref="model_treasury_cash_closing_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_treasury_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- RÈGLES POUR LES COFFRES                      -->
        <!-- ============================================ -->

        <record id="treasury_safe_rule_user" model="ir.rule">
            <field name="name">Coffres : responsables uniquement</field>
            <field name="model_id" ref="model_treasury_safe"/>
            <field name="domain_force">[
                '|',
                ('responsible_ids', 'in', [user.id]),
                ('create_uid', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_treasury_user'))]"/>
            <field name="perm_read" eval="True"/>
