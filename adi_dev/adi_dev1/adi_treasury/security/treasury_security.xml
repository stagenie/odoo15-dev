<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Catégorie de module -->
        <record id="module_category_treasury" model="ir.module.category">
            <field name="name">Trésorerie</field>
            <field name="description">Gestion de la trésorerie</field>
            <field name="sequence">45</field>
        </record>

        <!-- Groupe Utilisateur -->
        <record id="group_treasury_user" model="res.groups">
            <field name="name">Utilisateur</field>
            <field name="category_id" ref="module_category_treasury"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Peut consulter et utiliser les caisses auxquelles il est autorisé</field>
        </record>

        <!-- Groupe Manager -->
        <record id="group_treasury_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_treasury"/>
            <field name="implied_ids" eval="[(4, ref('group_treasury_user'))]"/>
            <field name="comment">Peut gérer toutes les caisses et configurations</field>
        </record>

        <!-- ============================================ -->
        <!-- RÈGLES POUR LES CAISSES (treasury.cash)      -->
        <!-- ============================================ -->

        <record id="treasury_cash_rule_user" model="ir.rule">
            <field name="name">Caisses : utilisateurs autorisés uniquement</field>
            <field name="model_id" ref="model_treasury_cash"/>
            <field name="domain_force">[
                '|', '|',
                ('user_ids', 'in', [user.id]),
                ('responsible_id', '=', user.id),
                ('create_uid', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_treasury_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="treasury_cash_rule_manager" model="ir.rule">
            <field name="name">Caisses : accès total pour managers</field>
            <field name="model_id" ref="model_treasury_cash"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_treasury_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- RÈGLES POUR LES OPÉRATIONS DE CAISSE         -->
        <!-- ============================================ -->

        <record id="treasury_cash_operation_rule_user" model="ir.rule">
            <field name="name">Opérations de caisse : caisses autorisées uniquement</field>
            <field name="model_id" ref="model_treasury_cash_operation"/>
            <field name="domain_force">[
                '|', '|',
                ('cash_id.user_ids', 'in', [user.id]),
                ('cash_id.responsible_id', '=', user.id),
                ('cash_id.create_uid', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_treasury_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="treasury_cash_operation_rule_manager" model="ir.rule">
            <field name="name">Opérations de caisse : accès total pour managers</field>
            <field name="model_id" ref="model_treasury_cash_operation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_treasury_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- RÈGLES POUR LES CLÔTURES DE CAISSE           -->
        <!-- ============================================ -->

        <record id="treasury_cash_closing_rule_user" model="ir.rule">
            <field name="name">Clôtures de caisse : caisses autorisées uniquement</field>
            <field name="model_id" ref="model_treasury_cash_closing"/>
