        </record>

        <!-- ============================================ -->
        <!-- RÈGLES POUR LES TRANSFERTS                   -->
        <!-- ============================================ -->

        <record id="treasury_transfer_rule_user" model="ir.rule">
            <field name="name">Transferts : caisses/coffres autorisés uniquement</field>
            <field name="model_id" ref="model_treasury_transfer"/>
            <field name="domain_force">[
                '|', '|', '|', '|', '|', '|', '|',
                ('cash_from_id.user_ids', 'in', [user.id]),
                ('cash_from_id.responsible_id', '=', user.id),
                ('cash_to_id.user_ids', 'in', [user.id]),
                ('cash_to_id.responsible_id', '=', user.id),
                ('safe_from_id.responsible_ids', 'in', [user.id]),
                ('safe_to_id.responsible_ids', 'in', [user.id]),
                ('create_uid', '=', user.id),
                ('user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('group_treasury_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
