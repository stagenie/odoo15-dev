<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action de rapport PDF -->
        <record id="action_report_product_inventory" model="ir.actions.report">
            <field name="name">Rapport Inventaire Produits</field>
            <field name="model">product.inventory.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">product_inventory_report.report_product_inventory_document</field>
            <field name="report_file">product_inventory_report.report_product_inventory_document</field>
            <field name="binding_model_id" ref="model_product_inventory_report_wizard"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Template PDF -->
        <template id="report_product_inventory_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">Rapport Inventaire Produits par Emplacement</h2>
                        <br/>

                        <t t-set="locations" t-value="data.get('locations', [])"/>
                        <t t-set="show_category" t-value="data.get('show_category', True)"/>
                        <t t-set="report_lines" t-value="env['product.inventory.report.line'].search([])"/>

                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr class="text-center" style="background-color: #f0f0f0;">
                                    <th>Référence</th>
                                    <th>Désignation</th>
                                    <th t-if="show_category">Catégorie</th>
                                    <t t-foreach="locations" t-as="location">
                                        <th><t t-esc="location"/></th>
                                    </t>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="report_lines" t-as="line">
                                    <tr>
                                        <td><t t-esc="line.default_code or ''"/></td>
                                        <td><t t-esc="line.name or ''"/></td>
                                        <td t-if="show_category">
                                            <t t-if="line.categ_id">
                                                <t t-esc="line.categ_id.name"/>
                                            </t>
                                        </td>
                                        <t t-if="len(locations) >= 1">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_1_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 2">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_2_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 3">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_3_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 4">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_4_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 5">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_5_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 6">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_6_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 7">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_7_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 8">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_8_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 9">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_9_qty or 0.0)"/></td>
                                        </t>
                                        <t t-if="len(locations) >= 10">
                                            <td class="text-right"><t t-esc="'{:,.2f}'.format(line.location_10_qty or 0.0)"/></td>
                                        </t>
                                        <td class="text-right">
                                            <strong><t t-esc="'{:,.2f}'.format(line.total_qty or 0.0)"/></strong>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
