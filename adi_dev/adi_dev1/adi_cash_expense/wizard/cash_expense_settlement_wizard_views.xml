<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cash_expense_settlement_wizard_form" model="ir.ui.view">
        <field name="name">cash.expense.settlement.wizard.form</field>
        <field name="model">cash.expense.settlement.wizard</field>
        <field name="arch" type="xml">
            <form string="Régler l'avance">
                <!-- Champ expense_id nécessaire pour les champs related -->
                <field name="expense_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>

                <group>
                    <group string="Informations de l'avance">
                        <field name="employee_id" readonly="1"/>
                        <field name="cash_id" readonly="1"/>
                    </group>
                    <group string="Montant de l'avance">
                        <field name="amount_advanced" widget="monetary" readonly="1"/>
                    </group>
                </group>

                <separator string="Dépenses effectuées"/>

                <group>
                    <field name="use_lines" widget="boolean_toggle"/>
                </group>

                <!-- Mode saisie directe du montant -->
                <group attrs="{'invisible': [('use_lines', '=', True)]}">
                    <group>
                        <field name="amount_spent" widget="monetary"
                               attrs="{'readonly': [('use_lines', '=', True)]}"/>
                    </group>
                    <group>
                        <field name="settlement_type" invisible="1"/>
                        <field name="amount_to_return" widget="monetary"
                               attrs="{'invisible': [('amount_to_return', '=', 0)]}"
                               class="text-success" readonly="1"/>
                        <field name="amount_to_pay" widget="monetary"
                               attrs="{'invisible': [('amount_to_pay', '=', 0)]}"
                               class="text-danger" readonly="1"/>
                    </group>
                </group>

                <!-- Mode saisie détaillée par lignes -->
                <group string="Détail des dépenses" attrs="{'invisible': [('use_lines', '=', False)]}">
                    <field name="line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="date"/>
                            <field name="name"/>
                            <field name="amount" widget="monetary" sum="Total"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="attachment_ids" widget="many2many_binary" string="Justif."/>
                        </tree>
                    </field>
                </group>

                <!-- Résumé si lignes utilisées -->
                <group attrs="{'invisible': [('use_lines', '=', False)]}">
                    <group>
                        <field name="amount_from_lines" widget="monetary" readonly="1" string="Total des lignes"/>
                        <field name="amount_spent" widget="monetary" readonly="1"/>
                    </group>
                    <group>
                        <field name="settlement_type" invisible="1"/>
                        <field name="amount_to_return" widget="monetary"
                               attrs="{'invisible': [('amount_to_return', '=', 0)]}"
                               class="text-success" readonly="1"/>
                        <field name="amount_to_pay" widget="monetary"
                               attrs="{'invisible': [('amount_to_pay', '=', 0)]}"
                               class="text-danger" readonly="1"/>
                    </group>
                </group>

                <group>
                    <field name="notes" placeholder="Notes sur le règlement..."/>
                </group>

                <group string="Justificatifs généraux" attrs="{'invisible': [('use_lines', '=', True)]}">
                    <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                </group>

                <!-- Alertes de résultat -->
                <div class="alert alert-info" role="alert" attrs="{'invisible': [('settlement_type', '!=', 'return')]}">
                    <i class="fa fa-arrow-down text-success"/> <strong>Retour d'argent :</strong> L'employé doit rendre
                    <field name="amount_to_return" widget="monetary" readonly="1" class="font-weight-bold"/> à la caisse.
                </div>

                <div class="alert alert-warning" role="alert" attrs="{'invisible': [('settlement_type', '!=', 'additional')]}">
                    <i class="fa fa-arrow-up text-danger"/> <strong>Paiement supplémentaire :</strong> Un montant de
                    <field name="amount_to_pay" widget="monetary" readonly="1" class="font-weight-bold"/> doit être payé à l'employé.
                </div>

                <div class="alert alert-success" role="alert" attrs="{'invisible': [('settlement_type', '!=', 'exact')]}">
                    <i class="fa fa-check"/> <strong>Montant exact :</strong> L'employé a dépensé exactement le montant de l'avance.
                </div>

                <footer>
                    <button string="Régler l'avance" name="action_settle" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
