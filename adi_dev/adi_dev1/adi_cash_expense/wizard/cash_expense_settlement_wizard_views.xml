<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cash_expense_settlement_wizard_form" model="ir.ui.view">
        <field name="name">cash.expense.settlement.wizard.form</field>
        <field name="model">cash.expense.settlement.wizard</field>
        <field name="arch" type="xml">
            <form string="Régler l'avance">
                <group>
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="cash_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="amount_advanced" widget="monetary" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>

                <group>
                    <group>
                        <label for="amount_spent" class="oe_edit_only"/>
                        <div class="o_row">
                            <field name="amount_spent" widget="monetary"/>
                        </div>
                    </group>
                    <group>
                        <field name="settlement_type" invisible="1"/>
                        <field name="amount_to_return" widget="monetary"
                               attrs="{'invisible': [('amount_to_return', '=', 0)]}"
                               class="text-success"/>
                        <field name="amount_to_pay" widget="monetary"
                               attrs="{'invisible': [('amount_to_pay', '=', 0)]}"
                               class="text-warning"/>
                    </group>
                </group>

                <group>
                    <field name="notes" placeholder="Notes sur le règlement..."/>
                </group>

                <group string="Justificatifs de dépenses">
                    <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                </group>

                <div class="alert alert-info" role="alert" attrs="{'invisible': [('settlement_type', '!=', 'return')]}">
                    <strong>Retour d'argent :</strong> L'employé doit rendre
                    <field name="amount_to_return" widget="monetary" readonly="1"/> à la caisse.
                </div>

                <div class="alert alert-warning" role="alert" attrs="{'invisible': [('settlement_type', '!=', 'additional')]}">
                    <strong>Paiement supplémentaire :</strong> Un montant de
                    <field name="amount_to_pay" widget="monetary" readonly="1"/> doit être payé à l'employé.
                </div>

                <div class="alert alert-success" role="alert" attrs="{'invisible': [('settlement_type', '!=', 'exact')]}">
                    <strong>Montant exact :</strong> L'employé a dépensé exactement le montant de l'avance.
                </div>

                <footer>
                    <button string="Régler" name="action_settle" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
