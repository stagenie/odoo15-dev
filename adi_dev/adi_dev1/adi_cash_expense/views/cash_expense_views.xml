<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire -->
    <record id="view_cash_expense_form" model="ir.ui.view">
        <field name="name">cash.expense.form</field>
        <field name="model">cash.expense</field>
        <field name="arch" type="xml">
            <form string="Dépense de Caisse">
                <header>
                    <button name="action_submit" string="Soumettre" type="object"
                            states="draft" class="oe_highlight"/>
                    <button name="action_approve" string="Approuver" type="object"
                            states="submitted" class="oe_highlight"
                            groups="adi_cash_expense.group_cash_expense_manager"/>
                    <button name="action_pay" string="Payer" type="object"
                            states="approved" class="oe_highlight"
                            groups="adi_cash_expense.group_cash_expense_cashier"/>
                    <button name="action_settle" string="Régler" type="object"
                            states="paid" class="oe_highlight"
                            attrs="{'invisible': [('expense_type', '!=', 'advance')]}"
                            groups="adi_cash_expense.group_cash_expense_cashier"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            states="draft,submitted,approved"
                            groups="adi_cash_expense.group_cash_expense_manager"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object"
                            states="cancel"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,paid,settled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object"
                                class="oe_stat_button" icon="fa-paperclip">
                            <field name="attachment_count" widget="statbutton" string="Justificatifs"/>
                        </button>
                        <button name="action_view_operations" type="object"
                                class="oe_stat_button" icon="fa-money"
                                attrs="{'invisible': [('state', 'in', ['draft', 'submitted', 'approved'])]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Opérations</span>
                            </div>
                        </button>
                        <button name="action_view_personal_account" type="object"
                                class="oe_stat_button" icon="fa-user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Compte Personnel</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="expense_type" widget="radio"/>
                            <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="department_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="cash_id" options="{'no_create': True}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount" widget="monetary"/>
                            <field name="amount_spent" attrs="{'invisible': [('expense_type', '!=', 'advance')],
                                                               'readonly': [('state', '!=', 'paid')]}"/>
                            <field name="amount_remaining" attrs="{'invisible': [('expense_type', '!=', 'advance')]}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Lignes de dépense" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total_amount" sum="Total"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Description" name="description">
                            <group>
                                <field name="description" nolabel="1" placeholder="Description détaillée de la dépense..."/>
                            </group>
                        </page>

                        <page string="Justificatifs" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                        </page>

                        <page string="Informations" name="info">
                            <group>
                                <group string="Créé par">
                                    <field name="user_id" readonly="1"/>
                                    <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                                </group>
                                <group string="Approbation" attrs="{'invisible': [('approved_by', '=', False)]}">
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                                <group string="Paiement" attrs="{'invisible': [('paid_by', '=', False)]}">
                                    <field name="paid_by" readonly="1"/>
                                    <field name="paid_date" readonly="1"/>
                                </group>
                                <group string="Règlement" attrs="{'invisible': [('settled_by', '=', False)]}">
                                    <field name="settled_by" readonly="1"/>
                                    <field name="settled_date" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <field name="notes" placeholder="Notes internes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="view_cash_expense_tree" model="ir.ui.view">
        <field name="name">cash.expense.tree</field>
        <field name="model">cash.expense</field>
        <field name="arch" type="xml">
            <tree string="Dépenses de Caisse" decoration-info="state=='draft'"
                  decoration-muted="state=='cancel'" decoration-success="state=='settled'">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="expense_type"/>
                <field name="cash_id"/>
                <field name="amount" sum="Total"/>
                <field name="amount_remaining" sum="Total Restant"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" widget="badge"
                       decoration-info="state in ['draft', 'submitted']"
                       decoration-warning="state == 'approved'"
                       decoration-success="state in ['paid', 'settled']"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_cash_expense_kanban" model="ir.ui.view">
        <field name="name">cash.expense.kanban</field>
        <field name="model">cash.expense</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="expense_type"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="employee_id"/>
                                    </span>
                                </div>
                                <span class="float-right badge badge-pill">
                                    <field name="expense_type"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="amount" widget="monetary"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="label"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_cash_expense_search" model="ir.ui.view">
        <field name="name">cash.expense.search</field>
        <field name="model">cash.expense</field>
        <field name="arch" type="xml">
            <search string="Rechercher Dépenses">
                <field name="name" string="Référence"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="cash_id"/>
                <field name="description"/>

                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Soumis" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approuvé" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Payé" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Réglé" name="settled" domain="[('state', '=', 'settled')]"/>

                <separator/>
                <filter string="Remboursements" name="reimbursement"
                        domain="[('expense_type', '=', 'reimbursement')]"/>
                <filter string="Avances" name="advance"
                        domain="[('expense_type', '=', 'advance')]"/>

                <separator/>
                <filter string="Avances en cours" name="active_advances"
                        domain="[('expense_type', '=', 'advance'), ('state', '=', 'paid')]"/>

                <separator/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois" name="this_month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Grouper par">
                    <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Département" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'expense_type'}"/>
                    <filter string="Caisse" name="group_cash" context="{'group_by': 'cash_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cash_expense" model="ir.actions.act_window">
        <field name="name">Dépenses de Caisse</field>
        <field name="res_model">cash.expense</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_cash_expense_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle dépense de caisse
            </p>
            <p>
                Gérez les remboursements et les avances de vos employés.
            </p>
        </field>
    </record>

    <!-- Action pour les remboursements -->
    <record id="action_cash_expense_reimbursement" model="ir.actions.act_window">
        <field name="name">Remboursements</field>
        <field name="res_model">cash.expense</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('expense_type', '=', 'reimbursement')]</field>
        <field name="context">{'default_expense_type': 'reimbursement'}</field>
        <field name="search_view_id" ref="view_cash_expense_search"/>
    </record>

    <!-- Action pour les avances -->
    <record id="action_cash_expense_advance" model="ir.actions.act_window">
        <field name="name">Avances</field>
        <field name="res_model">cash.expense</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('expense_type', '=', 'advance')]</field>
        <field name="context">{'default_expense_type': 'advance'}</field>
        <field name="search_view_id" ref="view_cash_expense_search"/>
    </record>
</odoo>
