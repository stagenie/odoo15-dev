<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Menu Dépense Caisse lié à l'app Trésorerie -->
    <menuitem id="menu_cash_expense_parent"
              name="Dépense Caisse"
              parent="adi_treasury.menu_treasury_main"
              sequence="40"/>

    <!-- Sous-menus d'Opérations -->
    <menuitem id="menu_cash_expense_operations"
              name="Opérations"
              parent="menu_cash_expense_parent"
              sequence="10"/>

    <menuitem id="menu_cash_expense_all"
              name="Toutes les dépenses"
              parent="menu_cash_expense_operations"
              action="action_cash_expense"
              sequence="10"/>

    <menuitem id="menu_cash_expense_reimbursement"
              name="Remboursements"
              parent="menu_cash_expense_operations"
              action="action_cash_expense_reimbursement"
              sequence="20"/>

    <menuitem id="menu_cash_expense_advance"
              name="Avances"
              parent="menu_cash_expense_operations"
              action="action_cash_expense_advance"
              sequence="30"/>

    <!-- Sous-menu Comptes -->
    <menuitem id="menu_cash_expense_accounts"
              name="Comptes"
              parent="menu_cash_expense_parent"
              sequence="20"/>

    <menuitem id="menu_personal_cash_account"
              name="Comptes personnels"
              parent="menu_cash_expense_accounts"
              action="action_personal_cash_account"
              sequence="10"/>

    <!-- Configuration (si besoin) -->
    <menuitem id="menu_cash_expense_config"
              name="Configuration"
              parent="menu_cash_expense_parent"
              sequence="100"
              groups="base.group_system"/>
</odoo>
