<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Invoice Form View to add exclude_from_partner_ledger field -->
        <record id="view_move_form_inherit_exclude_partner_ledger" model="ir.ui.view">
            <field name="name">account.move.form.inherit.exclude.partner.ledger</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add the field after payment_reference -->
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="exclude_from_partner_ledger"
                           string="Ne pas inclure dans le calcul du Solde "
                           attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund', 'in_invoice', 'in_refund'])]}"/>
                </xpath>
            </field>
        </record>

        <!-- Add the field to the tree view for better visibility -->
        <record id="view_invoice_tree_inherit_exclude_partner_ledger" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.exclude.partner.ledger</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="exclude_from_partner_ledger" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Add filter to customer invoices search view -->
        <record id="view_account_invoice_filter_inherit_exclude" model="ir.ui.view">
            <field name="name">account.invoice.search.inherit.exclude</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='late']" position="after">
                    <separator/>
                    <filter string="Hors solde" name="exclude_from_balance"
                            domain="[('exclude_from_partner_ledger', '=', True)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
