<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extension de l'action Livre des tiers (Partner Ledger) -->
        <record id="account.action_account_moves_ledger" model="ir.actions.act_window">
            <field name="context">{'exclude_flagged_moves': True}</field>
        </record>

        <!-- Extension de l'action Grand livre (General Ledger) -->
        <record id="account.action_move_line_select" model="ir.actions.act_window">
            <field name="context">{'exclude_flagged_moves': True}</field>
        </record>

        <!-- Extension de la vue liste des écritures comptables pour afficher le champ d'exclusion -->
        <record id="view_move_line_tree_inherit_exclude" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit.exclude</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='balance']" position="after">
                    <field name="move_id" invisible="1"/>
                    <field name="exclude_from_partner_ledger"
                           string="Exclus"
                           readonly="1"
                           optional="hide"
                           widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

        <!-- Ajout d'un filtre pour masquer/afficher les écritures exclues -->
        <record id="view_account_move_line_filter_inherit_exclude" model="ir.ui.view">
            <field name="name">account.move.line.search.inherit.exclude</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='unreconciled']" position="after">
                    <separator/>
                    <filter string="Masquer les exclusions"
                            name="hide_excluded"
                            domain="[('move_id.exclude_from_partner_ledger', '!=', True)]"
                            help="Masquer les écritures marquées comme exclues du calcul des soldes"/>
                    <filter string="Exclusions uniquement"
                            name="only_excluded"
                            domain="[('move_id.exclude_from_partner_ledger', '=', True)]"
                            help="Afficher uniquement les écritures exclues du calcul des soldes"/>
                </xpath>
            </field>
        </record>

        <!-- Extension de la vue formulaire des écritures comptables -->
        <record id="view_move_line_form_inherit_exclude" model="ir.ui.view">
            <field name="name">account.move.line.form.inherit.exclude</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="inside">
                    <field name="move_id" invisible="1"/>
                    <field name="exclude_from_partner_ledger"
                           string="Exclure du calcul des soldes"
                           readonly="1"
                           help="Cette écriture est marquée comme exclue dans la facture associée"/>
                </xpath>
            </field>
        </record>

        <!-- Ajout d'un menu pour accéder facilement aux factures exclues -->
        <record id="action_excluded_invoices" model="ir.actions.act_window">
            <field name="name">Factures exclues des soldes</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('exclude_from_partner_ledger', '=', True)]</field>
            <field name="context">{'search_default_invoice': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucune facture exclue
                </p>
                <p>
                    Cette vue affiche toutes les factures marquées comme exclues
                    du calcul des soldes dans les rapports comptables.
                </p>
            </field>
        </record>

        <menuitem id="menu_excluded_invoices"
                  name="Factures exclues"
                  parent="account.menu_finance_entries"
                  action="action_excluded_invoices"
                  sequence="99"/>
    </data>
</odoo>