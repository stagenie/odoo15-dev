<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================== -->
    <!-- Wizard d'envoi WhatsApp                       -->
    <!-- ============================================== -->

    <record id="whatsapp_send_wizard_view_form" model="ir.ui.view">
        <field name="name">whatsapp.send.wizard.form</field>
        <field name="model">whatsapp.send.wizard</field>
        <field name="arch" type="xml">
            <form string="Envoyer via WhatsApp">
                <!-- Champs cachés -->
                <field name="res_model" invisible="1"/>
                <field name="res_id" invisible="1"/>
                <field name="document_type" invisible="1"/>

                <!-- Informations du document -->
                <group string="Document">
                    <group>
                        <field name="document_name" readonly="1"/>
                    </group>
                    <group>
                        <field name="amount_total" readonly="1"/>
                    </group>
                </group>

                <!-- Destinataire - Pleine largeur -->
                <group string="Destinataire">
                    <group>
                        <field name="partner_id"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="phone_number" placeholder="+213555123456"/>
                    </group>
                </group>

                <!-- Message -->
                <group string="Message">
                    <field name="template_id" colspan="2"
                           options="{'no_create': True}"
                           domain="[('document_type', 'in', [document_type, 'all'])]"/>
                    <field name="message" colspan="2" nolabel="1"
                           placeholder="Saisissez votre message..."/>
                </group>

                <div class="alert alert-success" role="alert" style="background-color: #d4edda; border-color: #c3e6cb;">
                    <strong style="color: #25D366;">✓ Le détail des lignes est inclus automatiquement dans le message.</strong>
                    <br/>
                    <span class="text-muted">Le message sera ouvert dans votre WhatsApp Web - prêt à envoyer !</span>
                </div>

                <footer>
                    <button name="action_send_whatsapp"
                            string="  Envoyer via WhatsApp"
                            type="object"
                            class="btn-success"
                            icon="fa-whatsapp"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
