<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================== -->
    <!-- Bouton WhatsApp sur Factures                  -->
    <!-- ============================================== -->

    <!-- Héritage du formulaire account.move -->
    <record id="account_move_form_inherit_whatsapp" model="ir.ui.view">
        <field name="name">account.move.form.inherit.whatsapp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter le bouton WhatsApp après le bouton d'envoi -->
            <xpath expr="//button[@name='action_invoice_sent']" position="after">
                <button name="action_send_whatsapp"
                        string="WhatsApp"
                        type="object"
                        class="btn-success"
                        icon="fa-whatsapp"
                        attrs="{'invisible': ['|', ('partner_id', '=', False), ('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>
        </field>
    </record>

    <!-- Ajout du bouton dans l'action contextuelle pour les factures client -->
    <record id="action_account_move_whatsapp" model="ir.actions.server">
        <field name="name">Envoyer via WhatsApp</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
if record and record.move_type in ('out_invoice', 'out_refund'):
    action = record.action_send_whatsapp()
        </field>
    </record>

</odoo>
