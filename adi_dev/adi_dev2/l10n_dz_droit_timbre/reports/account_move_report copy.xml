<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_droit_timbre" inherit_id="account.document_tax_totals">          
           
            <xpath expr="." position="replace">
            <!-- Cas pour les factures (invoices) -->
            <t t-if="o and o.move_type in ['out_invoice', 'in_invoice']">

                <!-- Ajouter une ligne Timbre si le mode de paiement est "espece" -->
                <xpath expr="//tr[@class='border-black o_subtotal']" position="before">
                    <tr t-if="o.payment_mode_type == 'espece'">
                        <td>Timbre</td>
                        <td class="text-right">
                            <span t-field="o.amount_timbre"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </xpath>

                <!-- Remplacer le total avec/sans timbre selon le mode de paiement -->
                <xpath expr="//tr[@class='border-black o_subtotal']" position="replace">
                    <t t-if="o.payment_mode_type == 'espece'">
                        <span t-field="o.amount_total_with_timbre"
                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </t>
                    <t t-else="">
                        <span t-field="o.amount_total"
                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </t>
                </xpath>
            
            </t>
            <!-- Fin du cas pour les factures -->

             <!-- Cas pour les bons de commande (PO) et commandes client (SO) -->
            <t t-if="doc and doc._name in ['purchase.order', 'sale.order']">
                <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                    <tr class="border-black o_subtotal">
                        <td><strong t-esc="subtotal['name']"/></td>
                        <td class="text-right">
                            <span t-att-class="oe_subtotal_footer_separator" t-esc="subtotal['formatted_amount']"/>
                        </td>
                    </tr>
                    <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                    <t t-call="account.tax_groups_totals"/>
                </t>
                <tr class="border-black o_total">
                    <td><strong>Total</strong></td>
                    <td class="text-right">
                        <span t-esc="tax_totals['formatted_amount_total']"/>
                    </td>
                </tr>
            </t>
            </xpath>
        </template>
    </data>
</odoo>