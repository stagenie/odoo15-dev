<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_sale_history_wizard" model="ir.ui.view">
        <field name="name">product.sale.history.wizard.form</field>
        <field name="model">product.sale.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Historique des prix de vente">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="salesperson_id"/>
                            <field name="team_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Historique">
                            <field name="sale_history_ids" readonly="1">
                                <tree>
                                    <field name="date_order"/>
                                    <field name="order_id"/>
                                    <field name="price_unit"/>
                                    <field name="discount"/>
                                    <field name="salesperson_id"/>
                                    <field name="team_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Fermer" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>