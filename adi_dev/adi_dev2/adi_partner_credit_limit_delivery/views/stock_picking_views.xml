<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension de la vue picking pour afficher les infos de crÃ©dit -->
    <record id="view_picking_form_credit_limit" model="ir.ui.view">
        <field name="name">stock.picking.form.credit.limit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="customer_balance"
                       attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"
                       widget="monetary"/>
                <field name="partner_credit_limit"
                       attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"
                       widget="monetary"/>
            </xpath>
        </field>
    </record>
</odoo>
