<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ã‰tendre le template sale.report_saleorder_document -->
    <template id="sale_order_report_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-call='account.document_tax_totals']" position="before">
            <!-- Afficher le montant de la remise s'il existe -->
            <t t-if="doc.total_discount > 0">
                <div class="row mt-3">
                    <div class="col-6 offset-6 text-right">
                        <strong>Total Remise:</strong>
                        <span t-field="doc.total_discount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>