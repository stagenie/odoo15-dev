<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="bank_type" invisible="1"/>
                <field name="mode_payment" widget="radio" attrs="{'invisible': [('bank_type', '!=', 'bank')]}"/>
                <field name="check_number" attrs="{'invisible': [('mode_payment', '!=', 'check')]}"/>
                <field name="transfer_number" attrs="{'invisible': [('mode_payment', '!=', 'bank_transfer')]}"/>
                <field name="deposit_number" attrs="{'invisible': [('mode_payment', '!=', 'bank_deposit')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_tree_inherit" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="mode_payment"/>
                <field name="check_number" attrs="{'invisible': [('mode_payment', '!=', 'check')]}"/>
                <field name="transfer_number" attrs="{'invisible': [('mode_payment', '!=', 'bank_transfer')]}"/>
                <field name="deposit_number" attrs="{'invisible': [('mode_payment', '!=', 'bank_deposit')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_search_inherit" model="ir.ui.view">
    <field name="name">account.payment.search.inherit</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_search"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='journal_id']" position="after">
            <field name="mode_payment"/>
        </xpath>
        <xpath expr="//filter[@name='transfers_filter']" position="after">
            <filter string="Paiement par chÃ¨que" name="payment_type_check" domain="[('mode_payment', '=', 'check')]"/>
            <filter string="Paiement par virement bancaire" name="payment_type_bank_transfer" domain="[('mode_payment', '=', 'bank_transfer')]"/>
            <filter string="Paiement par versement bancaire" name="payment_type_bank_deposit" domain="[('mode_payment', '=', 'bank_deposit')]"/>
        </xpath>
        <xpath expr="//filter[@name='journal']" position="after">
            <filter string="Type de paiement" name="group_by_payment_type" context="{'group_by': 'mode_payment'}"/>
        </xpath>
    </field>
</record>


<!-- Wizard Form View -->
    <record id="view_account_payment_register_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.register.form.inherit</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
            <field name="bank_type" invisible="1"/>
                <field name="mode_payment" widget="radio" attrs="{'invisible': [('bank_type', '!=', 'bank')]}"/>
                <field name="check_number" attrs="{'invisible': [('mode_payment', '!=', 'check')]}"/>
                <field name="transfer_number" attrs="{'invisible': [('mode_payment', '!=', 'bank_transfer')]}"/>
                <field name="deposit_number" attrs="{'invisible': [('mode_payment', '!=', 'bank_deposit')]}"/>
               
            </xpath>
        </field>
    </record>

</odoo>