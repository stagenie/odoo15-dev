<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categorie du module -->
        <record id="module_category_return" model="ir.module.category">
            <field name="name">Gestion des Retours</field>
            <field name="description">Gestion des retours clients</field>
            <field name="sequence">50</field>
        </record>

        <!-- Groupe Utilisateur Retours -->
        <record id="group_return_user" model="res.groups">
            <field name="name">Utilisateur Retours</field>
            <field name="category_id" ref="module_category_return"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Peut creer et gerer ses propres ordres de retour</field>
        </record>

        <!-- Groupe Responsable Retours -->
        <record id="group_return_manager" model="res.groups">
            <field name="name">Responsable Retours</field>
            <field name="category_id" ref="module_category_return"/>
            <field name="implied_ids" eval="[(4, ref('group_return_user'))]"/>
            <field name="comment">Peut gerer tous les ordres de retour et la configuration</field>
        </record>

    </data>

    <data noupdate="1">

        <!-- ============================================ -->
        <!-- REGLES POUR LES ORDRES DE RETOUR             -->
        <!-- ============================================ -->

        <!-- Regle utilisateur : voir ses propres retours -->
        <record id="return_order_rule_user" model="ir.rule">
            <field name="name">Ordres de retour : utilisateurs (propres retours)</field>
            <field name="model_id" ref="model_return_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_return_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regle manager : acces total -->
        <record id="return_order_rule_manager" model="ir.rule">
            <field name="name">Ordres de retour : acces total managers</field>
            <field name="model_id" ref="model_return_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_return_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- REGLES POUR LES LIGNES DE RETOUR             -->
        <!-- ============================================ -->

        <record id="return_order_line_rule_user" model="ir.rule">
            <field name="name">Lignes retour : utilisateurs</field>
            <field name="model_id" ref="model_return_order_line"/>
            <field name="domain_force">[('return_order_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_return_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="return_order_line_rule_manager" model="ir.rule">
            <field name="name">Lignes retour : acces total managers</field>
            <field name="model_id" ref="model_return_order_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_return_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ============================================ -->
        <!-- REGLES POUR LES RAISONS DE RETOUR            -->
        <!-- ============================================ -->

        <record id="return_reason_rule_read_all" model="ir.rule">
            <field name="name">Raisons retour : lecture pour tous</field>
            <field name="model_id" ref="model_return_reason"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_return_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="return_reason_rule_manager" model="ir.rule">
            <field name="name">Raisons retour : acces total managers</field>
            <field name="model_id" ref="model_return_reason"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_return_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
