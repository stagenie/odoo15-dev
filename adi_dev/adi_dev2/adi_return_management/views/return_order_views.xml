<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue Form -->
    <record id="view_return_order_form" model="ir.ui.view">
        <field name="name">return.order.form</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <form string="Ordre de retour client">
                <header>
                    <button name="action_validate"
                            string="Valider"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_create_refund"
                            string="Creer Avoir"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'validated')]}"
                            confirm="Etes-vous sur de vouloir creer l'avoir ?"/>
                    <button name="%(adi_return_management.action_report_return_order)d"
                            string="Imprimer"
                            type="action"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button name="action_draft"
                            string="Remettre en brouillon"
                            type="object"
                            attrs="{'invisible': ['|', '|', ('state', '!=', 'validated'), ('refund_id', '!=', False), ('return_picking_id', '!=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,refund_created"/>
                </header>
                <sheet>
                    <!-- Boutons stat -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-truck"
                                attrs="{'invisible': [('picking_count', '=', 0)]}">
                            <field name="picking_count" widget="statinfo" string="Reception"/>
                        </button>
                        <button name="action_view_refund"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                attrs="{'invisible': [('refund_count', '=', 0)]}">
                            <field name="refund_count" widget="statinfo" string="Avoir"/>
                        </button>
                    </div>

                    <!-- Titre -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informations generales">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="reason_id" options="{'no_create': True}"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="refund_id" invisible="1"/>
                            <field name="return_picking_id" invisible="1"/>
                        </group>
                        <group string="Destination du retour">
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="return_location_id" options="{'no_create': True}"
                                   attrs="{'invisible': [('warehouse_id', '=', False)]}"/>
                            <field name="allowed_warehouse_ids" invisible="1"/>
                            <field name="allowed_location_ids" invisible="1"/>
                        </group>
                    </group>

                    <!-- Section Origine (visible en mode strict) -->
                    <group string="Origine" attrs="{'invisible': [('origin_mode', '!=', 'strict')]}">
                        <group>
                            <field name="origin_mode" invisible="1"/>
                            <field name="sale_order_ids" widget="many2many_tags"
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="picking_ids" widget="many2many_tags"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>

                    <!-- Info mode flexible -->
                    <div class="alert alert-info" role="alert"
                         attrs="{'invisible': [('origin_mode', '!=', 'flexible')]}">
                        <strong>Mode souple active :</strong> Seuls les produits deja livres a ce client peuvent etre retournes.
                    </div>

                    <notebook>
                        <page string="Lignes de retour" name="lines">
                            <!-- Bouton pour ouvrir le wizard d'ajout de produits -->
                            <button name="%(adi_return_management.action_return_order_add_products_wizard)d"
                                    string="Ajouter des produits"
                                    type="action"
                                    class="btn-primary mb-3"
                                    icon="fa-plus"
                                    attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('partner_id', '=', False)]}"/>

                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom" create="false" delete="true">
                                    <field name="sequence" widget="handle"/>
                                    <field name="partner_id" invisible="1"/>
                                    <field name="origin_mode" invisible="1"/>
                                    <field name="order_picking_ids" invisible="1"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="available_product_ids" invisible="1"/>
                                    <field name="effective_picking_id" string="BL origine" optional="show"
                                           attrs="{'column_invisible': [('parent.origin_mode', '=', 'none')]}"/>
                                    <field name="sale_line_id" string="Ligne commande" optional="hide"
                                           options="{'no_create': True, 'no_open': True}"/>
                                    <field name="picking_line_id" invisible="1"/>
                                    <field name="picking_id" invisible="1"/>
                                    <field name="origin_picking_id" invisible="1"/>
                                    <field name="qty_returned"/>
                                    <field name="qty_available" optional="show"/>
                                    <field name="price_unit" string="Prix vente"/>
                                    <field name="subtotal"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Informations" name="info">
                            <group>
                                <group string="Statistiques">
                                    <field name="line_count" string="Nombre de produits"/>
                                    <field name="days_since_creation" string="Anciennete (jours)"/>
                                    <field name="is_late" string="En retard"
                                           widget="boolean_toggle"
                                           attrs="{'invisible': [('is_late', '=', False)]}"/>
                                </group>
                                <group string="Documents lies">
                                    <field name="return_picking_id" string="Reception"
                                           attrs="{'invisible': [('return_picking_id', '=', False)]}"/>
                                    <field name="refund_id" string="Avoir"
                                           attrs="{'invisible': [('refund_id', '=', False)]}"/>
                                </group>
                            </group>
                            <group string="Informations systeme" groups="base.group_no_one">
                                <group>
                                    <field name="create_date" string="Date de creation"/>
                                    <field name="create_uid" string="Cree par"/>
                                </group>
                                <group>
                                    <field name="write_date" string="Derniere modification"/>
                                    <field name="write_uid" string="Modifie par"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Tree -->
    <record id="view_return_order_tree" model="ir.ui.view">
        <field name="name">return.order.tree</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <tree string="Ordres de retour client"
                  decoration-info="state == 'draft' and not is_late"
                  decoration-warning="state == 'validated' and not is_late"
                  decoration-success="state == 'refund_created'"
                  decoration-danger="is_late"
                  sample="1">
                <field name="name" decoration-bf="1"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="reason_id"/>
                <field name="line_count" string="Lignes" optional="show"/>
                <field name="warehouse_id"/>
                <field name="return_location_id" optional="hide"/>
                <field name="amount_total" sum="Total" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="days_since_creation" string="Jours" optional="show"
                       decoration-danger="days_since_creation > 7"
                       decoration-warning="days_since_creation > 3 and days_since_creation &lt;= 7"/>
                <field name="is_late" invisible="1"/>
                <field name="user_id" widget="many2one_avatar_user" optional="show"/>
                <field name="activity_ids" widget="list_activity" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'validated'"
                       decoration-success="state == 'refund_created'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_return_order_kanban" model="ir.ui.view">
        <field name="name">return.order.kanban</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" quick_create="false"
                    sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="amount_total"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="reason_id"/>
                <field name="warehouse_id"/>
                <field name="user_id"/>
                <field name="line_ids"/>
                <field name="refund_id"/>
                <field name="return_picking_id"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="state" colors='{"refund_created": "success", "validated": "warning"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">
                            <!-- Badge etat en haut a droite -->
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        <field name="partner_id"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'draft': 'info', 'validated': 'warning', 'refund_created': 'success'}}"/>
                                </div>
                            </div>
                            <!-- Corps de la carte -->
                            <div class="o_kanban_record_body">
                                <!-- Montant total en evidence -->
                                <div class="mb-2">
                                    <strong class="text-primary" style="font-size: 1.2em;">
                                        <field name="amount_total" widget="monetary"/>
                                    </strong>
                                </div>
                                <!-- Informations -->
                                <div class="d-flex flex-wrap gap-1 mb-2">
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        <i class="fa fa-tag"/> <field name="reason_id"/>
                                    </span>
                                    <span class="badge rounded-pill bg-light text-dark border">
                                        <i class="fa fa-cubes"/> <t t-esc="record.line_ids.raw_value.length"/> produit(s)
                                    </span>
                                </div>
                                <div class="text-muted small">
                                    <i class="fa fa-building-o"/> <field name="warehouse_id"/>
                                </div>
                                <!-- Indicateurs picking/avoir -->
                                <div class="mt-2" t-if="record.return_picking_id.raw_value or record.refund_id.raw_value">
                                    <span t-if="record.return_picking_id.raw_value" class="badge bg-info me-1" title="Reception creee">
                                        <i class="fa fa-truck"/>
                                    </span>
                                    <span t-if="record.refund_id.raw_value" class="badge bg-success" title="Avoir cree">
                                        <i class="fa fa-file-text-o"/>
                                    </span>
                                </div>
                            </div>
                            <!-- Pied de carte -->
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date" widget="date"/>
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="view_return_order_search" model="ir.ui.view">
        <field name="name">return.order.search</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <search string="Rechercher un retour">
                <!-- Champs de recherche -->
                <field name="name" string="Reference"/>
                <field name="partner_id" string="Client"/>
                <field name="reason_id" string="Raison"/>
                <field name="warehouse_id" string="Entrepot"/>
                <field name="return_location_id" string="Emplacement"/>
                <field name="user_id" string="Responsable"/>

                <!-- ============ Filtres par etat ============ -->
                <separator/>
                <filter string="Brouillon" name="draft"
                        domain="[('state', '=', 'draft')]"
                        help="Retours en attente de validation"/>
                <filter string="Valide" name="validated"
                        domain="[('state', '=', 'validated')]"
                        help="Retours valides, en attente d'avoir"/>
                <filter string="Avoir cree" name="refund_created"
                        domain="[('state', '=', 'refund_created')]"
                        help="Retours avec avoir cree"/>

                <!-- ============ Filtres par periode ============ -->
                <separator/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette semaine" name="this_week"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois" name="this_month"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <filter string="Mois dernier" name="last_month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')),
                                 ('date', '&lt;', context_today().strftime('%Y-%m-01'))]"/>
                <filter string="Ce trimestre" name="this_quarter"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1, month=(((context_today().month - 1) // 3) * 3 + 1))).strftime('%Y-%m-%d'))]"/>
                <filter string="Cette annee" name="this_year"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>

                <!-- ============ Filtres par montant ============ -->
                <separator/>
                <filter string="Petits retours (&lt; 10 000)" name="small_returns"
                        domain="[('amount_total', '&lt;', 10000)]"/>
                <filter string="Retours moyens (10K - 50K)" name="medium_returns"
                        domain="[('amount_total', '&gt;=', 10000), ('amount_total', '&lt;', 50000)]"/>
                <filter string="Gros retours (&gt; 50 000)" name="large_returns"
                        domain="[('amount_total', '&gt;=', 50000)]"/>

                <!-- ============ Filtres speciaux ============ -->
                <separator/>
                <filter string="Mes retours" name="my_returns"
                        domain="[('user_id', '=', uid)]"/>
                <filter string="En attente d'avoir" name="waiting_refund"
                        domain="[('state', '=', 'validated'), ('refund_id', '=', False)]"
                        help="Retours valides sans avoir"/>
                <filter string="Avec activites" name="activities_todo"
                        domain="[('activity_ids', '!=', False)]"/>
                <filter string="Activites en retard" name="activities_overdue"
                        domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>

                <!-- ============ Groupements ============ -->
                <group expand="0" string="Grouper par">
                    <filter string="Etat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Raison" name="group_reason" context="{'group_by': 'reason_id'}"/>
                    <filter string="Entrepot" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Responsable" name="group_user" context="{'group_by': 'user_id'}"/>
                    <separator/>
                    <filter string="Jour" name="group_day" context="{'group_by': 'date:day'}"/>
                    <filter string="Semaine" name="group_week" context="{'group_by': 'date:week'}"/>
                    <filter string="Mois" name="group_month" context="{'group_by': 'date:month'}"/>
                    <filter string="Trimestre" name="group_quarter" context="{'group_by': 'date:quarter'}"/>
                    <filter string="Annee" name="group_year" context="{'group_by': 'date:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_return_order" model="ir.actions.act_window">
        <field name="name">Ordres de retour client</field>
        <field name="res_model">return.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_return_order_search"/>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Creer votre premier ordre de retour
            </p>
            <p>
                Gerez les retours produits de vos clients et generez automatiquement les avoirs.
            </p>
        </field>
    </record>

</odoo>
