<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
        	 <xpath expr="//field[@name='partner_id']" position="after">
                <field name="can_edit_location" invisible="1"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button 
                    name="action_enable_location_edit" 
                    string="Activer Ã©dition emplacements" 
                    type="object"
                    groups="adi_transfert_stock.group_location_edit"
                    attrs="{'invisible': ['|','|', '|',
                      ('picking_type_code', '!=', 'internal'),
                     ('state', '=', 'draft'),
                     ('state', '=', 'done'),
                     ('can_edit_location', '=', True)]}"
                    class="btn btn-primary"/>
            </xpath>

            <!-- Modification des champs location -->
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('picking_type_code', '=', 'incoming')],
                     'readonly': ['&amp;', ('state', '!=', 'draft'), ('can_edit_location', '=', False)]}
                </attribute>
            </xpath>
            
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('picking_type_code', '=', 'outgoing')],
                     'readonly': ['&amp;', ('state', '!=', 'draft'), ('can_edit_location', '=', False)]}
                </attribute>
            </xpath>

           
        </field>
    </record>
</odoo>
