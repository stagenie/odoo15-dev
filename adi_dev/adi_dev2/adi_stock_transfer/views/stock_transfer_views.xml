<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulaire de transfert de stock -->
    <record id="view_stock_transfer_form" model="ir.ui.view">
        <field name="name">adi.stock.transfer.form</field>
        <field name="model">adi.stock.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_request" string="Soumettre la Demande" type="object"
                            states="draft" class="btn-primary"/>
                    <button name="action_approve" string="Approuver" type="object"
                            states="requested" class="btn-success"
                            groups="adi_stock_transfer.group_stock_transfer_validator"/>
                    <button name="action_start_transit" string="Envoyer" type="object"
                            states="approved" class="btn-primary"/>
                    <button name="action_done" string="Terminer (Réception complète)" type="object"
                            states="in_transit" class="btn-success"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            states="draft,requested,approved" class="btn-danger"/>
                    <button name="action_draft" string="Remettre en Brouillon" type="object"
                            states="cancelled" class="btn-warning"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,requested,approved,in_transit,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object" class="oe_stat_button"
                                icon="fa-truck" attrs="{'invisible': [('picking_count', '=', 0)]}">
                            <field name="picking_count" widget="statinfo" string="Transferts"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <!-- Dans le formulaire, après le div oe_title -->
            <div class="alert alert-warning" attrs="{'invisible': [('is_inter_company', '=', False)]}" role="alert">
                    <i class="fa fa-warning"/> Transfert Inter-Sociétés : Deux bons de transfert seront créés (sortie et entrée)
                </div>

                <!-- Champs invisibles -->
                        <field name="is_inter_company" invisible="1"/>
                        <field name="source_picking_id" invisible="1"/>
                        <field name="dest_picking_id" invisible="1"/>
                        <field name="transit_location_id" invisible="1"/>

                    <group>
                        <group string="Informations Générales">
                            <field name="requester_id"/>
                            <field name="validator_id"/>
                            <field name="request_date"/>
                            <field name="scheduled_date"/>
                        </group>
                        <group string="Statistiques">
                            <field name="total_products"/>
                            <field name="total_quantity" string="Qté Demandée"/>
                            <field name="total_qty_sent" string="Qté Envoyée"
                                   attrs="{'invisible': [('state', 'in', ['draft', 'requested'])]}"/>
                            <field name="total_qty_received" string="Qté Reçue"
                                   attrs="{'invisible': [('state', 'in', ['draft', 'requested', 'approved'])]}"/>
                        </group>
                    </group>
                    <field name="is_single_company_mode" invisible="1"/>
                    <group string="Configuration des Emplacements">
                         <group string="Source">
                            <!-- Masquer le champ société si mode mono-société -->
                            <field name="source_company_id" 
                                    options="{'no_create': True}"
                                    attrs="{'invisible': [('is_single_company_mode', '=', True)]}"/>
                            <field name="source_warehouse_id" options="{'no_create': True}"/>
                            <field name="source_location_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Destination">
                            <field name="dest_company_id" 
                                   options="{'no_create': True}"
                                   attrs="{'invisible': [('is_single_company_mode', '=', True)]}"/>
                            <field name="dest_warehouse_id" options="{'no_create': True}"/>
                            <field name="dest_location_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Produits à Transférer">
                            <field name="transfer_line_ids">
                                <tree editable="bottom"
                                      decoration-success="line_state == 'done'"
                                      decoration-warning="line_state == 'partial'"
                                      decoration-info="line_state == 'sent'">
                                    <!-- Champ invisible pour le contrôle -->
                                    <field name="parent_state" invisible="1"/>

                                    <!-- Produit: éditable seulement en brouillon -->
                                    <field name="product_id" options="{'no_create': True}"
                                           attrs="{'readonly': [('parent_state', '!=', 'draft')]}"/>
                                    <field name="product_uom_id" options="{'no_create': True}"
                                           groups="uom.group_uom"
                                           attrs="{'readonly': [('parent_state', '!=', 'draft')]}"/>
                                    <field name="available_quantity" readonly="1" string="Dispo."
                                           decoration-danger="available_quantity == 0"
                                           decoration-warning="available_quantity &lt; quantity"/>
                                    <!-- Quantité demandée: éditable en brouillon et en demandé (pour le validateur) -->
                                    <field name="quantity" string="Demandé"
                                           decoration-danger="quantity &gt; available_quantity"
                                           attrs="{'readonly': [('parent_state', 'not in', ['draft', 'requested'])]}"/>
                                    <!-- Quantité envoyée: éditable seulement en état approuvé -->
                                    <field name="qty_sent" string="Envoyé" optional="show"
                                           attrs="{'readonly': [('parent_state', '!=', 'approved')]}"/>
                                    <!-- Quantité reçue: éditable seulement en transit -->
                                    <field name="qty_received" string="Reçu" optional="show"
                                           attrs="{'readonly': [('parent_state', '!=', 'in_transit')]}"/>
                                    <field name="qty_remaining" string="Reliquat" readonly="1"
                                           decoration-danger="qty_remaining &gt; 0" optional="show"/>
                                    <field name="line_state" string="État" widget="badge"
                                           decoration-success="line_state == 'done'"
                                           decoration-warning="line_state == 'partial'"
                                           decoration-info="line_state == 'sent'" optional="show"/>
                                    <field name="note" optional="hide"
                                           attrs="{'readonly': [('parent_state', 'not in', ['draft', 'in_transit'])]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="note" nolabel="1" placeholder="Notes internes..."/>
                                <field name="rejection_reason" 
                                       attrs="{'invisible': [('state', '!=', 'cancelled')]}"
                                       placeholder="Raison du rejet/annulation..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Les autres vues restent identiques, je les ajoute pour être complet -->
    
    <!-- Vue Tree -->
    <record id="view_stock_transfer_tree" model="ir.ui.view">
        <field name="name">adi.stock.transfer.tree</field>
        <field name="model">adi.stock.transfer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="requester_id"/>
                <field name="source_warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <field name="total_quantity" string="Quantité"/>
                <field name="request_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_stock_transfer_kanban" model="ir.ui.view">
        <field name="name">adi.stock.transfer.kanban</field>
        <field name="model">adi.stock.transfer</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="source_warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <field name="total_quantity"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div><field name="requester_id"/></div>
                                <div>
                                    <field name="source_warehouse_id"/> → <field name="dest_warehouse_id"/>
                                </div>
                                <div><field name="total_quantity"/> unités</div>
                                <div><field name="state" widget="badge"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="view_stock_transfer_search" model="ir.ui.view">
        <field name="name">adi.stock.transfer.search</field>
        <field name="model">adi.stock.transfer</field>
        <field name="arch" type="xml">
            <search string="Transferts">
                <field name="name"/>
                <field name="requester_id"/>
                <field name="source_warehouse_id"/>
                <field name="dest_warehouse_id"/>
                <separator/>
                <filter string="Brouillon" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Demandé" name="filter_requested" domain="[('state', '=', 'requested')]"/>
                <filter string="Approuvé" name="filter_approved" domain="[('state', '=', 'approved')]"/>
                <filter string="En Transit" name="filter_in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Terminé" name="filter_done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Mes Demandes" name="filter_my_requests" domain="[('requester_id', '=', uid)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Demandeur" name="group_requester" context="{'group_by': 'requester_id'}"/>
                    <filter string="Entrepôt Source" name="group_source" context="{'group_by': 'source_warehouse_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'request_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_stock_transfer" model="ir.actions.act_window">
        <field name="name">Transferts de Stock</field>
        <field name="res_model">adi.stock.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau transfert de stock
            </p>
            <p>
                Gérez vos transferts de stock entre différents emplacements et entrepôts
                avec un système de validation à deux niveaux.
            </p>
        </field>
    </record>
</odoo>
