<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequence pour les ordres de retour fournisseur -->
        <record id="sequence_supplier_return_order" model="ir.sequence">
            <field name="name">Ordre de retour fournisseur</field>
            <field name="code">supplier.return.order</field>
            <field name="prefix">RETF/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Raisons de retour fournisseur par defaut -->
        <record id="reason_defective" model="supplier.return.reason">
            <field name="name">Produit defectueux</field>
            <field name="code">DEFECT</field>
            <field name="sequence">10</field>
            <field name="description">Le produit presente un defaut de fabrication ou de fonctionnement.</field>
        </record>

        <record id="reason_wrong_product" model="supplier.return.reason">
            <field name="name">Mauvais produit livre</field>
            <field name="code">WRONG</field>
            <field name="sequence">20</field>
            <field name="description">Le produit livre ne correspond pas a la commande.</field>
        </record>

        <record id="reason_damaged" model="supplier.return.reason">
            <field name="name">Produit endommage</field>
            <field name="code">DAMAGED</field>
            <field name="sequence">30</field>
            <field name="description">Le produit a ete endommage pendant le transport.</field>
        </record>

        <record id="reason_expired" model="supplier.return.reason">
            <field name="name">Produit perrime</field>
            <field name="code">EXPIRED</field>
            <field name="sequence">40</field>
            <field name="description">Le produit a depasse sa date de peremption.</field>
        </record>

        <record id="reason_quality" model="supplier.return.reason">
            <field name="name">Non-conformite qualite</field>
            <field name="code">QUALITY</field>
            <field name="sequence">50</field>
            <field name="description">Le produit ne respecte pas les standards de qualite requis.</field>
        </record>

        <record id="reason_excess" model="supplier.return.reason">
            <field name="name">Surplus de livraison</field>
            <field name="code">EXCESS</field>
            <field name="sequence">60</field>
            <field name="description">Quantite livree superieure a la quantite commandee.</field>
        </record>

        <record id="reason_other" model="supplier.return.reason">
            <field name="name">Autre</field>
            <field name="code">OTHER</field>
            <field name="sequence">99</field>
            <field name="description">Autre raison de retour non listee.</field>
        </record>

    </data>
</odoo>
