<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_supplier_return" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.supplier.return</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']" position="inside">
                <h2>Retours Fournisseurs</h2>
                <div class="row mt16 o_settings_container" name="supplier_return_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="supplier_return_origin_mode"/>
                            <div class="text-muted">
                                Definit comment les produits peuvent etre selectionnes lors d'un retour fournisseur
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="supplier_return_origin_mode" class="o_light_label" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_supplier_return_config_settings" model="ir.actions.act_window">
        <field name="name">Parametres</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'purchase'}</field>
    </record>

</odoo>
