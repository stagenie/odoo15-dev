<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue Pivot -->
    <record id="view_supplier_return_order_pivot" model="ir.ui.view">
        <field name="name">supplier.return.order.pivot</field>
        <field name="model">supplier.return.order</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des retours fournisseurs" disable_linking="True">
                <field name="date" type="row" interval="month"/>
                <field name="reason_id" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Graph ligne -->
    <record id="view_supplier_return_order_graph_line" model="ir.ui.view">
        <field name="name">supplier.return.order.graph.line</field>
        <field name="model">supplier.return.order</field>
        <field name="arch" type="xml">
            <graph string="Evolution des retours fournisseurs" type="line">
                <field name="date" type="row" interval="month"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Graph camembert par raison -->
    <record id="view_supplier_return_order_graph_pie_reason" model="ir.ui.view">
        <field name="name">supplier.return.order.graph.pie.reason</field>
        <field name="model">supplier.return.order</field>
        <field name="arch" type="xml">
            <graph string="Retours par raison" type="pie">
                <field name="reason_id" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Graph barres par fournisseur -->
    <record id="view_supplier_return_order_graph_bar_partner" model="ir.ui.view">
        <field name="name">supplier.return.order.graph.bar.partner</field>
        <field name="model">supplier.return.order</field>
        <field name="arch" type="xml">
            <graph string="Retours par fournisseur" type="bar">
                <field name="partner_id" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Graph barres par entrepot -->
    <record id="view_supplier_return_order_graph_bar_warehouse" model="ir.ui.view">
        <field name="name">supplier.return.order.graph.bar.warehouse</field>
        <field name="model">supplier.return.order</field>
        <field name="arch" type="xml">
            <graph string="Retours par entrepot" type="bar">
                <field name="warehouse_id" type="row"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Search pour l'analyse -->
    <record id="view_supplier_return_order_analysis_search" model="ir.ui.view">
        <field name="name">supplier.return.order.analysis.search</field>
        <field name="model">supplier.return.order</field>
        <field name="arch" type="xml">
            <search string="Analyse des retours fournisseurs">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="reason_id"/>
                <field name="warehouse_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Valide" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Avoir cree" name="refund_created" domain="[('state', '=', 'refund_created')]"/>
                <separator/>
                <filter string="Ce mois" name="this_month"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <filter string="Ce trimestre" name="this_quarter"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1, month=(((context_today().month - 1) // 3) * 3 + 1))).strftime('%Y-%m-%d'))]"/>
                <filter string="Cette annee" name="this_year"
                        domain="[('date', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                <separator/>
                <group expand="1" string="Grouper par">
                    <filter string="Fournisseur" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Raison" name="group_reason" context="{'group_by': 'reason_id'}"/>
                    <filter string="Entrepot" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Mois" name="group_month" context="{'group_by': 'date:month'}"/>
                    <filter string="Annee" name="group_year" context="{'group_by': 'date:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions analyse -->
    <record id="action_supplier_return_order_pivot" model="ir.actions.act_window">
        <field name="name">Tableau croise dynamique</field>
        <field name="res_model">supplier.return.order</field>
        <field name="view_mode">pivot,graph,tree,form</field>
        <field name="view_id" ref="view_supplier_return_order_pivot"/>
        <field name="search_view_id" ref="view_supplier_return_order_analysis_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
    </record>

    <record id="action_supplier_return_order_evolution" model="ir.actions.act_window">
        <field name="name">Evolution des retours</field>
        <field name="res_model">supplier.return.order</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="view_id" ref="view_supplier_return_order_graph_line"/>
        <field name="search_view_id" ref="view_supplier_return_order_analysis_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
    </record>

    <record id="action_supplier_return_order_by_reason" model="ir.actions.act_window">
        <field name="name">Retours par raison</field>
        <field name="res_model">supplier.return.order</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="view_id" ref="view_supplier_return_order_graph_pie_reason"/>
        <field name="search_view_id" ref="view_supplier_return_order_analysis_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
    </record>

    <record id="action_supplier_return_order_by_partner" model="ir.actions.act_window">
        <field name="name">Retours par fournisseur</field>
        <field name="res_model">supplier.return.order</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="view_id" ref="view_supplier_return_order_graph_bar_partner"/>
        <field name="search_view_id" ref="view_supplier_return_order_analysis_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
    </record>

    <record id="action_supplier_return_order_by_warehouse" model="ir.actions.act_window">
        <field name="name">Retours par entrepot</field>
        <field name="res_model">supplier.return.order</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="view_id" ref="view_supplier_return_order_graph_bar_warehouse"/>
        <field name="search_view_id" ref="view_supplier_return_order_analysis_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
    </record>

</odoo>
