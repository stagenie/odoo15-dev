<odoo>
   <record id="view_product_template_tree_inherit" model="ir.ui.view">
    <field name="name">product.template.tree.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view"/>
    <field name="arch" type="xml">
        <!-- Ajout des colonnes dans la vue liste -->
        <xpath expr="//tree" position="inside">
            <field name="total_saled" string="Total Vendue" readonly="1"/>
            <field name="total_purchased" string="Total Acheté" readonly="1"/>
            <field name="balance_av" string="Solde A-V" readonly="1" widget="float"/>
        </xpath>
    </field>
</record>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
    <field name="name">product.template.form.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
        <!-- Ajout des champs dans l'onglet général -->
        <xpath expr="//sheet/notebook/page[@name='general_information']/group" position="after">
            <group string="Quantités Suivies">
                <field name="total_saled" readonly="1"/>
                <field name="total_purchased" readonly="1"/>
                <field name="balance_av" readonly="1" widget="float"/>
            </group>
        </xpath>

        <!-- Ajout des smartbuttons -->
        <xpath expr="//header" position="inside">
            <button name="action_view_customer_invoices"
                    string="Factures Clients"
                    type="object"
                    class="oe_highlight"
                    icon="fa-file-text-o"/>
            <button name="action_view_supplier_invoices"
                    string="Factures Fournisseurs"
                    type="object"
                    class="oe_highlight"
                    icon="fa-file-text-o"/>
        </xpath>
    </field>
</record>
</odoo>