<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Ajout du champ observation sur le formulaire facture client -->
    <record id="view_move_form_observation_out" model="ir.ui.view">
        <field name="name">account.move.form.observation.out</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="after">
                <field name="observation" placeholder="Observations internes..."
                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}"/>
            </xpath>
        </field>
    </record>

    <!-- Ajout du champ observation sur la liste des factures clients -->
    <record id="view_invoice_tree_observation" model="ir.ui.view">
        <field name="name">account.move.tree.observation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="observation" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Ajout du champ observation sur la liste des factures fournisseurs -->
    <record id="view_in_invoice_tree_observation" model="ir.ui.view">
        <field name="name">account.move.tree.observation.vendor</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="observation" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
