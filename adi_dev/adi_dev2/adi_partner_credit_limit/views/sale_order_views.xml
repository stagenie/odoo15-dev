<odoo>
    <!-- Extension de la vue Devis pour afficher le solde client et la limite de crédit -->
    <record id="view_order_form_credit_limit" model="ir.ui.view">
        <field name="name">sale.order.form.credit.limit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter les champs de solde et limite après le champ partenaire -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <!-- Afficher les informations de crédit du client en dessous du partenaire -->
                <group string="Informations de crédit client" attrs="{'invisible': [('partner_id', '=', False)]}">
                    <field name="customer_balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="partner_credit_limit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="available_credit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Produit template -->
    <record id="view_product_template_form_rapid_inherit" model="ir.ui.view">
        <field name="name">product.template.form.rapid.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="detailed_type" position="attributes">
                <attribute name="default">product</attribute> <!-- Set default type here -->
            </field>
        </field>
    </record>
</odoo>

