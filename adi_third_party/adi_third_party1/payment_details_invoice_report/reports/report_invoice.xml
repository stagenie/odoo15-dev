<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!-- Report template for the invoice report-->
    <template id="report_invoice_inherits"
              inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']//div[2]" position="after">
            <div class="col-auto col-3 mw-100 mb-2" name="due_date">
                <strong>Etats de la Facture:</strong>
                <p class="m-0" t-field="o.payment_state" widget="badge"/>
            </div>
        </xpath>
        <xpath expr="//p[@name='payment_term']" position="after">
            <t t-if="print_with_payments and o.payment_details">
               <center><strong style="font-size:20px;">Détails de Paiements</strong></center>
                <br/>
                <table class="table table-sm o_main_table" name="payment_details_table" style="background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <thead>
                        <tr>
                            <th name="th_sl_no" class="text-center" style="width:50px"><span>N°</span></th>
                            <th name="th_payment_date" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="width:100px"><span>Date</span></th>
                            <th name="th_payment_method" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="width:140px"><span>Méthode de paiement</span></th>
                            <th name="th_payment_reference" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="width:200px"><span>Ref de Paiement </span></th>
                            <th name="th_amount_paid" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="width:110px"><span>Montant Payé</span></th>
                        </tr>
                    </thead>
                    <tbody class="payment_details_table_body">
                        <t t-set="index" t-value="0"/>
                        <t t-foreach="payments_vals" t-as="payment_vals">
                            <tr>
                                <t t-set="index" t-value="index + 1"/>
                                <td align="center"><t t-esc="index"/></td>
                                <td align="center"><t t-esc="payment_vals.get('date')" t-options='{"widget": "date"}'></t></td>
                                <td align="center"><t t-esc="payment_vals.get('journal_name')"/></td>
                                <td align="center"><t t-esc="payment_vals.get('ref')"/></td>
                                <td align="center">
                                    <t t-esc="payment_vals.get('amount')"
                                       t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>

                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </xpath>
    </template>
</odoo>
