<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard that to confirm the journal entry cancel-->
    <record id="cancel_account_move_cancel_reset_view_form" model="ir.ui.view">
        <field name="name">account.move.cancel.reset.view.form</field>
        <field name="model">account.move.cancel.reset</field>
        <field name="arch" type="xml">
            <form>
                <h4>
                    <span>Êtes-vous sûr de vouloir annuler toutes les Factures sélectionnées?
                    </span>
                </h4>
                <footer>
                    <button name="action_mass_journal_entry_cancel"
                            string="Annulation massive de Factures"
                            class="btn-primary" type="object"/>
                    <button string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Wizard to confirm the journal entry reset -->
    <record id="account_move_cancel_reset_view_form" model="ir.ui.view">
        <field name="name">account.move.cancel.reset.view.form</field>
        <field name="model">account.move.cancel.reset</field>
        <field name="arch" type="xml">
            <form>
                <h4>
                    <span>Êtes-vous sûr de vouloir réinitialiser toutes les Factures sélectionnée?
                    </span>
                </h4>
                <footer>
                    <button name="action_mass_journal_entry_reset"
                            string="Réinitialisation massive de Factures"
                            class="btn-primary" type="object"/>
                    <button string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Action for journal entry cancel and reset -->
    <record id="account_move_cancel_reset_action"
            model="ir.actions.act_window">
        <field name="name">Annulation multiples de Factures</field>
        <field name="res_model">account.move.cancel.reset</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Annulation multiples de Factures 
            </p>
        </field>
    </record>
</odoo>
