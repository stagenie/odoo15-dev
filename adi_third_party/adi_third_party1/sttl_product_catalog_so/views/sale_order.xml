<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='preview_sale_order']" position="before">
                <button name="product_catelog" type="object" class="oe_stat_button" icon="fa-truck" groups="sales_team.group_sale_manager">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Product</span>
                        <span class="o_stat_text">Catalog</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
