<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_ttc" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.ttc</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Ajout dans la vue formulaire des lignes de commande -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
           
                <field name="price_unit_with_tax" 
                       widget="monetary" 
                       optional="show"
                       string="P.U-TTC"/>
                
                       
            </xpath>
           <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
               
                <field name="price_total_with_tax" 
                       widget="monetary" 
                       optional="hide"
                       string="Montant TTC"/>
                       
            </xpath>
        </field>
    </record>
</odoo>