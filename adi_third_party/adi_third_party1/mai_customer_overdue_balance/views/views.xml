<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Affichage ou nom du solde actu-->

    <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.account</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <div data-key="account" position="inside">
            <h2>Paramètres Facture</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_total_due"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_total_due"/>
                        <div class="text-muted">
                            Afficher le total échu sur les factures
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_total_balance"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_total_balance"/>
                        <div class="text-muted">
                            Afficher le solde total sur les factures 
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_previous_balance"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_previous_balance"/>
                        <div class="text-muted">
                            Afficher l'ancien solde sur les factures
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </field>
</record>




  <template id="stamp_duty_invoice_report_invoice_dz" inherit_id="l10n_dz_droit_timbre.adi_report_invoice_document"> 
    <xpath expr="//div[@id='total']" position="after">
        <div class="row" t-if="(o.company_id.show_total_due or o.company_id.show_total_balance) and o.move_type not in ('in_invoice', 'in_refund')"> 
            <div class="col-4" t-if="o.company_id.show_total_due">
             <strong>Total échu:</strong> <span t-field="o.partner_id.overdue_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/> </div>
             <div class="col-4" t-if="o.company_id.show_previous_balance">
                <strong>Ancien Solde:</strong> 
                <span t-field="o.partner_id.previous_balance" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
            </div>


             <div class="col-4" t-if="o.company_id.show_total_balance">
              <strong>Solde Total:</strong> <span t-field="o.partner_id.current_balance" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/> </div> 
          </div>
         </xpath>
    </template>
 
       
      

